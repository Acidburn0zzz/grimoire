default_pre_build                                             &&
cd ${SOURCE_DIRECTORY}                                        &&
# fix problems on amd64 with libtool versions (bug #13943)
./autogen.sh                                                  &&
# dht patch
if [[ ${DHT_PATCH} != n ]]; then
  cp ${SPELL_DIRECTORY}/dht.diff ${SOURCE_DIRECTORY}/dht.diff &&
  patch -p1 < dht.diff
fi

