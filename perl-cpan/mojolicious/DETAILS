   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/S/SR/SRI/$SOURCE
     SOURCE_HASH=sha512:48f5c15a04f0666f464cea02bdd2e54aba8365e67da2e9a88b503cce52a1fda75bafd1542465bddc3d69ed6b5d06d4932630bd2b74873ce230b655426883ef1d
