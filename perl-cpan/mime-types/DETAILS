   SOURCE_URL[0]=$PERL_CPAN_URL/authors/id/M/MA/MARKOV/${SOURCE}
     SOURCE_HASH=sha512:6993ebd32d0870f6a4d19a6079857ce4574b9b67fa035fa4ca787db37e6a3d2450b2ce1ac4dfa7259bcd7d397bdf2f9ff067c3fad1a7cf19ffcdaf33c6b95952
