           SPELL=libintl-perl
         VERSION=1.16
       BUILD_API=2
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://search.cpan.org/CPAN/authors/id/G/GU/GUIDO/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME"
        WEB_SITE=http://search.cpan.org/~guido/$SPELL-$VERSION/
      LICENSE[0]=
         ENTERED=20041212
         UPDATED=20041212
        KEYWORDS="i18n perl"
           SHORT='Internationalization library for Perl'
cat <<EOF
The package libintl-perl is an internationalization library for Perl
that aims to be compatible with the Uniforum message translations
system as implemented for example in GNU gettext.
EOF
