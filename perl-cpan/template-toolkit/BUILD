PERL_OPTS="  TT_PREFIX=$INSTALL_ROOT/usr/share/$SPELL \
  TT_IMAGES=$INSTALL_ROOT/usr/share/$SPELL \
  TT_DOCS=${TT_DOCS}                       \
  TT_SPLASH=${TT_SPLASH}                   \
  TT_THEME=${TT_THEME}                     \
  TT_EXAMPLES=${TT_EXAMPLES}               \
  TT_EXTRAS=${TT_EXTRAS}                   \
  TT_XS_ENABLE=${TT_XS_ENABLE}             \
  TT_XS_DEFAULT=${TT_XS_DEFAULT}           \
  TT_QUIET=y                               \
  TT_ACCEPT=y" &&
default_build_perl
