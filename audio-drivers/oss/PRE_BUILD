default_pre_build                            &&
mk_source_dir  $SOURCE_DIRECTORY.bld         &&
cd $SOURCE_DIRECTORY                         &&
if [[ $OSS_BRANCH == stable ]]; then
patch -p1 < $SPELL_DIRECTORY/buildfix.diff   &&
patch -p0 < $SPELL_DIRECTORY/nosoundon.diff
fi                                           &&
if [[ $OSS_BRANCH != stable ]]; then
patch -p0 < $SPELL_DIRECTORY/nowerror.patch
fi

