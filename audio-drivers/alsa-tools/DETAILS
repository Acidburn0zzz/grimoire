           SPELL=alsa-tools
if [[ $ALSA_TOOLS_GIT == y ]]; then
  if  [[ $ALSA_TOOLS_GIT_AUTOUPDATE == y ]];  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git://git.alsa-project.org/alsa-tools.git:alsa-tools-git
   SOURCE_IGNORE=volatile
