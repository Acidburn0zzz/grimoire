          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.alsa-project.org/pub/tools/$SOURCE
     SOURCE_HASH=sha512:7aeba97ba58a7f7d56e3acd39f5df3d8062da28e2c9649c8e5ec9c7f9696f192fca90b4378a9d4f95511db5a078c79e468b76817b51b2bc2a7964882f0f591e9
