           SPELL=alsa-tools
if [[ $ALSA_TOOLS_GIT == y ]]; then
  if  [[ $ALSA_TOOLS_GIT_AUTOUPDATE == y ]];  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git://git.alsa-project.org/alsa-tools.git:alsa-tools-git
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
  FORCE_DOWNLOAD=1
else
         VERSION=1.0.24.1
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.alsa-project.org/pub/tools/$SOURCE
     SOURCE_HASH=sha512:478bdbaf2a4987d6d00c1231dc45c62114c7b9697d70e0f62e523f89050266026dce2257747f5a2060f0ce37f4a33a174f39cfc0b1a84356aadfb233cedff392
fi
        WEB_SITE=http://www.alsa-project.org/
         ENTERED=20040525
      LICENSE[0]=GPL
        KEYWORDS="alsa drivers audio"
           SHORT="Alsa tools for your sound card"
