#
# libs & daemon
#
make  DESTDIR="$INSTALL_ROOT"  install  &&

#
# pkgconfig file
#
message "${MESSAGE_COLOR}Installing pkgconfig file$DEFAULT_COLOR"  &&
mkdir -p  "$INSTALL_ROOT/usr/lib/pkgconfig"                        &&
cp  "$SCRIPT_DIRECTORY/jack.pc"                                    \
    "$INSTALL_ROOT/usr/lib/pkgconfig/"
