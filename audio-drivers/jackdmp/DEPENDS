depends  pkgconfig  &&
depends  alsa-lib   &&
depends  g++        &&

if [[ $JACKDMP_VCS == y ]]
then
  depends  scons  &&

  optional_depends  doxygen                   \
                    "BUILD_DOXYGEN_DOCS=yes"  \
                    "BUILD_DOXYGEN_DOCS=no"   \
                    "to build documentation"  &&

  if [[ $JACKDMP_VCS_BRANCH == control ]]
  then
    optional_depends  dbus               \
                      "ENABLE_DBUS=yes"  \
                      "ENABLE_DBUS=no"   \
                      "to enable the D-Bus control interface"
  fi
fi
