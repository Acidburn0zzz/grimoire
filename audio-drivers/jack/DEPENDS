optional_depends  alsa-lib          \
                  "--enable-alsa"   \
                  "--disable-alsa"  \
                  "for ALSA driver support"  &&

optional_depends  portaudio              \
                  "--enable-portaudio"   \
                  "--disable-portaudio"  \
                  "for PortAudio driver support"  &&

optional_depends  libcap                    \
                  "--enable-capabilities"   \
                  "--disable-capabilities"  \
                  "to gain realtime scheduling priviledges"
