          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=ftp://ftp.alsa-project.org/pub/plugins/$SOURCE
     SOURCE_HASH=sha512:2f234873288eaea690ab68250799ae5bccd3454d4bf63101756605089e747362d62d128c4dead494da6bfcc71d7a5190965d0012f3ff7531df8c8d47d1494bcb
