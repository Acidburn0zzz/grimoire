### soundcore test
if [ -e ${TRACK_ROOT}/proc/config.gz ] ; then
	if [ `zgrep -c 'CONFIG_SOUND is not set' ${TRACK_ROOT}/proc/config.gz` = 1 ] ; then
	    message "${SPELL_COLOR} You *must* configure your kernel with CONFIG_SOUND on${DEFAULT_COLOR}"
	    return 1
	fi
elif [ `grep -c 'CONFIG_SOUND is not set' ${TRACK_ROOT}/etc/sorcery/local/kernel.config` = 1 ] ; then
    message "${SPELL_COLOR} You *must* configure your kernel with CONFIG_SOUND on${DEFAULT_COLOR}"
    return 1
fi
