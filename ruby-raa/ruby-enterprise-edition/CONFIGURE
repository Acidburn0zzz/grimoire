config_query 	REE_FT "Use Fast Threading? (expiremental, but active by default)" y &&
config_query  REE_TC "Install tcmalloc? (not required, but makes REE better)" y 
config_query  REE_DOC "Install Rdocs?" n &&
config_query_option REE_OPTS "Enable a shared ruby library?" n "--enable-shared" "" &&
config_query_option REE_OPTS "Use pthread library?" n "--enable-pthread" ""
