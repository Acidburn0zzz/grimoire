#-------------------------------------------------------------------------
## Default build for ruby spell.
#-------------------------------------------------------------------------
function default_build_ruby() {
  if [[ -e ./setup.rb ]]; then
    ruby setup.rb config --prefix=${INSTALL_ROOT}/usr $OPTS &&
    ruby setup.rb setup
  elif [[ -e ./install.rb ]]; then
    ruby install.rb config --prefix=${INSTALL_ROOT}/usr $OPTS &&
    ruby install.rb setup
  elif [[ -e ./extconf.rb ]]; then
    ruby extconf.rb  $OPTS &&
    make
  elif [[ -e ./Makefile ]]; then
    make
  elif [[ -e ./Rakefile ]]; then
    rake $OPTS
  fi
}
#-------------------------------------------------------------------------
## Default install for ruby spell.
#-------------------------------------------------------------------------
function default_install_ruby() {
  if [[ -e $SOURCE_DIRECTORY/setup.rb ]]; then
    ruby setup.rb install --prefix=${INSTALL_ROOT}/usr
  elif [[ -e $SOURCE_DIRECTORY/install.rb ]]; then
    ruby install.rb install --prefix=${INSTALL_ROOT}/usr
  elif [[ -e $SOURCE_DIRECTORY/extconf.rb ]] ||
       [[ -e ./Makefile ]]
       then
    make install
  elif [[ -e $SOURCE_DIRECTORY/Rakefile ]]; then
    rake install
  fi
}

function default_build() {
   default_build_ruby
}
function default_install() {
   default_install_ruby
}

