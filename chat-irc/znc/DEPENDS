depends g++ &&

optional_depends perl \
                 "--enable-perl" \
                 "--disable-perl" \
                 "to use perl" &&

optional_depends tcl \
                 "--enable-tcl" \
                 "--disable-tcl" \
                 "to use TCL" &&

optional_depends cyrus-sasl \
                 "--enable-sasl" \
                 "--disable-sasl" \
                 "for SASL support" &&

optional_depends c-ares \
                 "--enable-c-ares" \
                 "--disable-c-ares" \
                 "for c-ares usage" &&

optional_depends openssl \
                 "--enable-openssl" \
                 "--disable-openssl" \
                 "to use OpenSSL"
