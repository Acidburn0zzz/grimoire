depends  glib2    &&
depends  ncurses  &&
depends  g++      &&

optional_depends  "openssl"          \
                  ""                 \
                  "--disable-ssl"    \
                  "for SSL support"  &&

optional_depends  "perl"                \
                  "--with-perl=module"  \
                  "--with-perl=no"      \
                  "for perl support"    &&
optional_depends  "dante"               \
		  "--with-socks"        \
		  "--without-socks"     \
		  "for SOCKS support"   &&

if [ "$IRSSI_SVN" = "y" ]; then
  depends  subversion
fi
