           SPELL=weechat
if [ "$WEECHAT_DEVEL" == "y" ]; then
  if [ "$WEECHAT_DEVEL_AUTOUPDATE" == "y" ]; then
         VERSION=$(date +%Y%m%d)
  else
    if [ "$WEECHAT_DEVEL_CVS" == "y" ]; then
         VERSION=cvs
    else
         VERSION=devel
    fi
  fi
  if [ "$WEECHAT_DEVEL_CVS" == "y" ]; then
          SOURCE=weechat-cvs.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/weechat-cvs
  else
          SOURCE=weechat-devel.tar.gz
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/weechat-devel
  fi
  FORCE_DOWNLOAD=on
   SOURCE_IGNORE=volatile
else
         VERSION=0.2.5
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
fi
if [ "$WEECHAT_DEVEL_CVS" == "y" ]; then
   SOURCE_URL[1]=cvs://:pserver:anonymous@cvs.savannah.nongnu.org:/sources/weechat:weechat
else
   SOURCE_URL[1]=http://weechat.flashtux.org/download/$SOURCE
fi
        WEB_SITE=http://weechat.flashtux.org/index.php?lang=en
         ENTERED=20050320
      LICENSE[0]=GPL
        KEYWORDS="irc chat"
           SHORT="Weechat is a nucurses based IRC program"
cat << EOF
Weechat is an ncurses based IRC Chat program.
EOF
