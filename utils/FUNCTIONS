cmake_build() {
cd $SOURCE_DIRECTORY  &&
mkdir -p build        &&
cd build              &&
cmake -DCMAKE_INSTALL_PREFIX=$INSTALL_ROOT/usr ../  &&
make
}
qt4_build() {
QTDIR=/usr
PATH=$QTDIR/bin/qt4:$PATH
LD_LIBRARY_PATH=$QTDIR/lib/qt4:$LD_LIBRARY_PATH
PKG_CONFIG_PATH=$QTDIR/lib/qt4:$PKG_CONFIG_PATH
cmake_build
}
