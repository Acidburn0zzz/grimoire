cd  $SOURCE_DIRECTORY                                           &&
chown -R root:root .                                            &&
install -m 0755 vrms $INSTALL_ROOT/usr/bin/vrms                 &&
install -m 0644 vrms.1 $INSTALL_ROOT/usr/share/man/man1/vrms.1  &&
mkdir -p $INSTALL_ROOT/usr/share/$SPELL                         &&
cp -a reasons $INSTALL_ROOT/usr/share/$SPELL
