   SOURCE_URL[0]=https://github.com/dagwieers/${SPELL}/archive/${VERSION}.tar.gz
     SOURCE_HASH=sha512:db37cc8bb7afd235ae9088e76c4defaa4d76651b111fbfdcd0980bc96376de20d57964912799a413397a79651730503bdeb8fea5cb97ab4d6d81632f528aefd2
