depends openldap &&

optional_depends linux-pam \
                 "--enable-pam" \
                 "--disable-pam" \
                 "for the PAM module" &&

optional_depends LIBSASL \
                 "--enable-sasl" \
                 "--disable-sasl" \
                 "for SASL support" &&

optional_depends krb5 \
                 "--enable-kerberos" \
                 "--disable-kerberos" \
                 "for Kerberos support"
