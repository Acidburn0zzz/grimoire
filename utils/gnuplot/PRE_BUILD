default_pre_build    &&
if [[ $GNUPLOT_LUA == "y" ]]; then
  cd $SOURCE_DIRECTORY &&
  unpack_file 2        &&
  cp $SOURCE_DIRECTORY/gnuplot_lua_terminal/lua.trm \
    $SOURCE_DIRECTORY/term &&
  echo '#include "lua.trm"' >> $SOURCE_DIRECTORY/src/term.h &&
  sedit 's/^LIBS = /LIBS = -llua /' $SOURCE_DIRECTORY/src/Makefile.in
fi
