default_pre_build     &&
cd $SOURCE_DIRECTORY  &&

mkdir FAKEQTDIR &&

ln -s $TRACK_ROOT/usr/include/qt  $SOURCE_DIRECTORY/FAKEQTDIR/include  &&
ln -s $TRACK_ROOT/usr/bin         $SOURCE_DIRECTORY/FAKEQTDIR/bin      &&
ln -s $TRACK_ROOT/usr/lib         $SOURCE_DIRECTORY/FAKEQTDIR/lib      &&

sedit "s:QT3DIR=\"/usr/qt/3 /usr/lib/qt3 /usr/lib/qt-3.3 /usr/share/qt3 /usr/lib64/qt-3.3 /usr/X11R6 /usr/lib/qt\":QT3DIR=\"$SOURCE_DIRECTORY/FAKEQTDIR\":" configure

sedit 's:QT4DIR="/usr/lib/qt4 /usr/share/qt4 /usr":QT4DIR="/usr/bin/qt4 /usr/lib/qt4 /usr/share/qt4 /usr":' configure
sedit 's:QT4UIC3DIR="/usr/bin":QT4UIC3DIR="/usr/bin/qt4":' configure
