default_pre_build     &&
cd $SOURCE_DIRECTORY  &&

cp $SPELL_DIRECTORY/LocalConfig.kmk . &&

mkdir FAKEQT4DIR &&

ln -s $TRACK_ROOT/usr/include     $SOURCE_DIRECTORY/FAKEQT4DIR/include  &&
ln -s $TRACK_ROOT/usr/bin/qt4     $SOURCE_DIRECTORY/FAKEQT4DIR/bin      &&
ln -s $TRACK_ROOT/usr/lib/qt4     $SOURCE_DIRECTORY/FAKEQT4DIR/lib      &&

sedit "145d;147d" configure

sedit "145iQT4DIR=\"$SOURCE_DIRECTORY/FAKEQT4DIR\"" configure
sedit "147iQT4UIC3DIR=\"$SOURCE_DIRECTORY/FAKEQT4DIR\"" configure
