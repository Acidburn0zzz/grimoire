default_pre_build     &&
cd $SOURCE_DIRECTORY  &&

mkdir FAKEQTDIR &&

ln -s $TRACK_ROOT/usr/include/qt  $SOURCE_DIRECTORY/FAKEQTDIR/include  &&
ln -s $TRACK_ROOT/usr/bin         $SOURCE_DIRECTORY/FAKEQTDIR/bin      &&
ln -s $TRACK_ROOT/usr/lib         $SOURCE_DIRECTORY/FAKEQTDIR/lib      &&

mkdir FAKEQT4DIR &&

ln -s $TRACK_ROOT/usr/include     $SOURCE_DIRECTORY/FAKEQT4DIR/include  &&
ln -s $TRACK_ROOT/usr/bin/qt4     $SOURCE_DIRECTORY/FAKEQT4DIR/bin      &&
ln -s $TRACK_ROOT/usr/lib/qt4     $SOURCE_DIRECTORY/FAKEQT4DIR/lib      &&

sedit "97d;98d;99d;101d" configure

sedit "97iQT3DIR=\"$SOURCE_DIRECTORY/FAKEQTDIR\"" configure
sedit "98iQT4DIR=\"$SOURCE_DIRECTORY/FAKEQT4DIR\"" configure
sedit "101iQT4UIC3DIR=\"$SOURCE_DIRECTORY/FAKEQT4DIR\"" configure
