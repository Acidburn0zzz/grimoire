   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:205daaa46d44e96ebeb1d092fcec961cc3d783a17659e7810a7db08cf37dd7317711686a5cf3d704e6f3a95cfbfe9a04f136e5a3a10abe695549a38fdd78aa0b
