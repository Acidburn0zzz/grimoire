   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:63a6dfe792f9214d7c133deaa3786acf4415e30d98591fc5950442117077a8da6c6c8ae7b50a209387ba47d2e98eda870202171adeb6e4712d1523e845a80fd7
