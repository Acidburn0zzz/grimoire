           SPELL=rsyslog
if [[ "${RSYSLOG_BRANCH}" == "devel" ]]; then
         VERSION=3.19.10
     SOURCE_HASH=sha512:995e26a13ded14154fad3ca61629c6db5b2b9f51ce1eb898eb13e05ada23f88fa5a6108bb9440709e1674a41c3ae97bea30b46dc830b8ce136c9b06568ba83df
else
         VERSION=3.18.0
     SOURCE_HASH=sha512:ccf2e20c585c8c95a36510f659712722b8b2e1917379775e7d3a1da2bbfab02c78746604c95fc79982e8b93df9900708499f34a62e6286dda2e2bd7d0adff675
