           SPELL=rsyslog
if [[ "${RSYSLOG_BRANCH}" == "devel" ]]; then
         VERSION=3.19.9
     SOURCE_HASH=sha512:f76ca384044e55c2c2cffba3738c8eb4f4cd4d6ca88c732827607fd82cd86704145af0e496d278c1f0a7d37c3d11f6aade7ec537d1864b491bef7182950d0abd
else
         VERSION=3.18.0
     SOURCE_HASH=sha512:ccf2e20c585c8c95a36510f659712722b8b2e1917379775e7d3a1da2bbfab02c78746604c95fc79982e8b93df9900708499f34a62e6286dda2e2bd7d0adff675
