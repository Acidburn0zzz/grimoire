           SPELL=avahi
         VERSION=0.6.30
          SOURCE=${SPELL}-${VERSION}.tar.gz
      SOURCE_URL=http://avahi.org/download/${SOURCE}
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig:UPSTREAM_HASH"
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/${SPELL}-${VERSION}
