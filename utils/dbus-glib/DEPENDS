depends glib2  &&
depends dbus   &&
if  [  "$DBUS_XMLTYPE"  ==  'y'  ];  then
   depends  libxml2  '--with-xml=libxml'
else
   depends  expat  '--with-xml=expat'
fi  &&
optional_depends  doxygen                        \
                  '--enable-doxygen-docs'        \
                  '--disable-doxygen-docs'       \
                  'Build DOXYGEN documentation'  &&

optional_depends  xmlto                      \
                  '--enable-xml-docs'        \
                  '--disable-xml-docs'       \
                  'Build XML Documentation'

