          SOURCE=$SPELL-$VERSION.tar.gz
     SOURCE_HASH=sha512:a97ab23ca8b87575653f6fea4f7eba7fb5aacb8cfa0195ebfff70ecc38f88f26677b26d76c8ba68bd2dac24bdabfabc2f7334ab94bd4b4c0eeb94303438dbda1
