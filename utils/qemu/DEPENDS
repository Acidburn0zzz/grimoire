                  '--enable-alsa'                                         \
                  '--disable-alsa'                                        \
                  'for Advanced Linux Sound Architecture driver support'  &&
# Qemu configure script doesn't accept --enable-kqemu .
optional_depends  kqemu                              \
                  ''                                 \
                  '--disable-kqemu'                  \
                  'for kernel acceleration support'
