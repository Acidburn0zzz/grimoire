         VERSION=git
      PATCHLEVEL=1
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=git://git.freedesktop.org/git/hal
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
else
