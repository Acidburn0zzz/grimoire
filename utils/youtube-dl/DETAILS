           SPELL=youtube-dl
         VERSION=2008.06.08
          SOURCE=$SPELL
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.arrakis.es/~rggi3/$SPELL/$SOURCE
   SOURCE_IGNORE=unversioned
      LICENSE[0]=BSD
        KEYWORDS="utils"
