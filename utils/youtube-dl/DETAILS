   SOURCE_URL[0]=http://bitbucket.org/rg3/youtube-dl/raw/$VERSION/$SOURCE
     SOURCE_HASH=sha512:29aad89cf60955caeae45ded6ee6b2c2fadab48eac87a6025e21b9ac80da17ea1378632178ab6a406fa4767a7d24a4853acebbc3b2c1d5143025baf2ddcfa460
