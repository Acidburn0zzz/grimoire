default_pre_build          &&
#  mk_source_dir $SOURCE_DIRECTORY &&
cd $SOURCE_DIRECTORY 	   &&
sedit  's:-lpostproc:-Llibpostproc -lpostproc:'  libavcodec/Makefile  &&
sedit  's:-Werror::'  libavformat/Makefile  &&

message amr=$FFAMR  &&
case $FFAMR in
    none);;
    amr_nb)
      cd libavcodec              &&
      unpack_file 2              &&
      unzip ${VERSION2}*.zip     &&
      ln -s c-code amr_float
      ;;
esac
