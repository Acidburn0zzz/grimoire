default_pre_build            &&
cd      ${SOURCE_DIRECTORY}  &&
unpack_file 2                &&
if check_if_xorg_modular_server; then
  sed -i 's:FSlib.h:X11/fonts/FSlib.h:'  console/fs.h   &&
  sed -i 's:-L@x_libraries@ @FSLIB@:-lFS:' Makefile.in  &&
  sed -i 's:/usr/X11R6/lib/X11:/usr/lib/X11:'  configure
fi
