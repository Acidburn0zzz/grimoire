config_query_option ENABLE_DVB "Enable DVB capture card functionality" y  "--enable-dvb --dvb-path=/usr/include/linux/dvb" "" &&
config_query_option ENABLE_JOYSTICK "Enable joystick menu?" y  "--enable-joystick-menu" "--disable-joystick-menu" &&
config_query_option ENABLE_FIREWIRE "Enable firewire support" y  "--enable-firewire" "--disable-firewire"
