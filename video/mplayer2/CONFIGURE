if  [ "$MPLAYER2_BRANCH" != "scm" ];  then
  config_query_option MPLAYER_IVTV  \
                      "Build against IVTV?" n           \
                      "--enable-ivtv" "--disable-ivtv"
fi  &&
config_query_option MPLAYER_OPTS  \
                    "Enable Joystick support?" y              \
                    "--enable-joystick" "--disable-joystick"  

