local FONT_DIR=${INSTALL_ROOT}/usr/share/fonts/X11/TTF
local DOC_DIR=${INSTALL_ROOT}/usr/share/doc/${SPELL}
install -d ${DOC_DIR}                                        &&
install -d ${FONT_DIR}                                       &&
install -t ${DOC_DIR} AnonymousPro-${VERSION}/*.txt          &&
install -t ${FONT_DIR} AnonymousPro-${VERSION}/*.ttf
