   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:194f42235828f96aea3f2eaf3b0771bbd841cb41a08b3316c4fce632c1e429295a9b19f317275ca0b2f850d293c6ba61d5b64f09e2f61537a8fccd0aab946004
