           SPELL=ifxetex
         VERSION=20080313
          SOURCE="${SPELL}.sty"
   SOURCE_URL[0]=http://www.ctan.org/tex-archive/macros/xetex/latex/${SPELL}/${SOURCE}
   SOURCE_IGNORE=unversioned
SOURCE_DIRECTORY="${BUILD_DIRECTORY}/${SPELL}"
        WEB_SITE="http://www.ctan.org/tex-archive/help/Catalogue/entries/ifxetex.html"
      LICENSE[0]=LPPL
         ENTERED=20080313
           SHORT="A simple package which provides an ifxetex conditional"
cat << EOF
A simple package which provides an \ifxetex conditional, so that other code
can determine that it is running under XeTeX.
EOF
