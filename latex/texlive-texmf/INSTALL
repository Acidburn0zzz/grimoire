mkdir -vp "$INSTALL_ROOT"/usr/share/man/man{1,5} &&
cp -Rv texmf-dist "$INSTALL_ROOT"/usr/share/ &&
ln -rsf "$INSTALL_ROOT"/usr/share/texmf-dist/doc/man/man1/*.1 "$INSTALL_ROOT"/usr/share/man/man1/ &&
ln -rsf "$INSTALL_ROOT"/usr/share/texmf-dist/doc/man/man1/*.5 "$INSTALL_ROOT"/usr/share/man/man5/ &&
ln -rsf "$INSTALL_ROOT"/usr/share/texmf-dist/doc /usr/share/doc/texmf
