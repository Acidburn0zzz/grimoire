cp -R ${SOURCE_DIRECTORY}/doc/generic/pgf \
    ${INSTALL_ROOT}/usr/share/texmf/doc                  &&
cp -R ${SOURCE_DIRECTORY}/generic/pgf \
    ${INSTALL_ROOT}/usr/share/texmf/tex/generic          &&
cp -R ${SOURCE_DIRECTORY}/plain/pgf \
    ${INSTALL_ROOT}/usr/share/texmf/tex/plain            &&
cp -R ${SOURCE_DIRECTORY}/latex/pgf \
    ${INSTALL_ROOT}/usr/share/texmf/tex/latex
