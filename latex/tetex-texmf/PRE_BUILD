if [[ "$TETEX_TEXMF_CURRENT" == "y" ]]; then
	message "removing obsolete parts of texmf"
	rm -rf ${SOURCE_DIRECTORY}/doc/latex/{beamer,pgf,xcolor,koma-script} &&
	rm -rf ${SOURCE_DIRECTORY}/tex/latex/{beamer,pgf,xcolor,koma-script}
fi                                  &&
cd              $SOURCE_DIRECTORY   &&
rm  ls-R
