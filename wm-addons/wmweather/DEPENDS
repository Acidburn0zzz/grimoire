depends  windowmaker  &&
depends  perl         &&
depends  X11-LIBS     &&
if  [  "$(get_spell_provider  $SPELL  X11-LIBS)"  ==  "xorg-server"  ] || \
    [  "$(get_spell_provider  $SPELL  X11-LIBS)"  ==  "xorg-libs"  ];  then
  optional_depends xmessage "--with-xmessage=${INSTALL_ROOT}/usr/bin/xmessage" "--without-xmessage"
fi
