source $GRIMOIRE/FUNCTIONS                   &&

depends X11-LIBS                             &&

optional_depends  imlib2                     \
                  "--with-imlib2"            \
                  "--without-imlib2"         \
                  "for imlib2 support"       &&

if check_if_xorg_modular_libs; then
   optional_depends  libxrender              \
                     "--with-xrender"        \
                     "--without-xrender"     \
                     "for Xrender support"   &&
   optional_depends  libxcursor              \
                     "--with-xcursor"        \
                     "--without-xcursor"     \
                     "for Xcursor support"   &&
   optional_depends  libxpm                  \
                     "--with-xpm"            \
                     "--without-xpm"         \
                     "for XPM support"
fi                                           &&

if [[ "${ALOCK_SHADOW}" = "y" ]]; then
   optional_depends  shadow                  \
                     "" ""                   \
                     "for Shadow support"
else
   optional_depends  linux-pam               \
                  "--with-pam"               \
                  "--without-pam"            \
                  "for PAM support"
fi
