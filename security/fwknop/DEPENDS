if list_find "$FWKNOP_OPTS" "--enable-server"; then
  depends libpcap &&

  runtime_depends iptables &&

  optional_depends gdbm \
                   "--disable-file-cache" \
                   "--enable-file-cache" \
                   "to replace file cache with gdbm"
fi &&

optional_depends gpgme \
                 "--with-gpgme" \
                 "--without-gpgme" \
                 "for gpg encryption support"
