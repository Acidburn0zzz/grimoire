cp  chkrootkit  /usr/bin  &&

local  LIB=/usr/lib/chkrootkit  &&
mkdir  -p  $LIB                 &&

cp  check_wtmpx     $LIB  &&
cp  chkdirs         $LIB  &&
cp  chklastlog      $LIB  &&
cp  chkproc         $LIB  &&
cp  chkutmp         $LIB  &&
cp  chkwtmp         $LIB  &&
cp  ifpromisc       $LIB  &&
cp  strings-static  $LIB  &&

local  DOC=/usr/share/doc/chkrootkit  &&
mkdir  -p  $DOC                       &&

cp  COPYRIGHT       $DOC  &&
cp  README*         $DOC  &&
cp  chkrootkit.lsm  $DOC
