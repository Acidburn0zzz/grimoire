depends libmad                                &&
optional_depends libogg                       \
                 "--enable-ogg"               \
                 "--disable-ogg"              \
                 "Enable Ogg/Vorbis support"  &&
. $GRIMOIRE/is_depends_enabled.function
if is_depends_enabled $SPELL libogg ; then
depends libvorbis
fi                                            &&
optional_depends libid3tag                    \
                 "--enable-id3tag"            \
                 "--disable-id3tag"           \
                 "Enable id3tag support(to preserve tags)"
