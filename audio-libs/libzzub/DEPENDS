depends  g++    &&
depends  scons  &&

optional_depends  alsa-lib                   \
                  "ALSA=True"                \
                  "ALSA=False"               \
                  "for ALSA driver support"  &&

optional_depends  JACK-DRIVER                \
                  "JACK=True"                \
                  "JACK=False"               \
                  "for JACK driver support"  &&

optional_depends  libsndfile                                    \
                  "SNDFILE=True"                                \
                  "SNDFILE=False"                               \
                  "to support loading of waves via libsndfile"
