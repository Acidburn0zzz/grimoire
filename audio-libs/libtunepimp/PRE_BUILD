default_pre_build                               &&
cd $SOURCE_DIRECTORY                            &&
zcat $SCRIPT_DIRECTORY/gcc43.patch | patch -p1  &&
patch $SOURCE_DIRECTORY/lib/fileio.cpp \
      $SCRIPT_DIRECTORY/gcc44.patch &&

