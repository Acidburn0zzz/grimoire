config_query_option CONF_OPTS "Build static libraries?" y \
                              "--enable-static" \
                              "--disable-static" &&

config_query_option CONF_OPTS "Enable debugging?" n \
                              "--enable-debug" \
                              "--disable-debug" &&

config_query_option CONF_OPTS "Enable SSE (Intel/AMD) opcodes support?" n \
                              "--enable-sse" \
                              "--disable-sse" &&

config_query_option CONF_OPTS "AVX, AVX2 optimizations" n\
                              "--enable-avx" \
                              "--disable-avx" &&

config_query_option CONF_OPTS "Enable AltiVec (PowerPC) opcodes support?" n \
                              "--enable-altivec" \
                              "--disable-altivec" &&

config_query_option CONF_OPTS "assembly optimization routines" n\
                              "--enable-asm-optimizations" \
                              "--disable-asm-optimizations"
