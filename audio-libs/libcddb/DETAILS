        WEB_SITE=http://libcddb.sourceforge.net
     SOURCE_HASH=sha512:e42748d46fe0ef2c7dad9c3281f001b231d5a12ce3afdd77289c3d9807c48e7d641f96990d275b911245f7cdb4f406a8a7cf19f5122c71ba04c30d28cc7b7446
