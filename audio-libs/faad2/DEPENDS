depends  autoconf  &&
depends  automake  &&
depends  libtool   &&
depends  g++       &&

if [ "$XMMS" = "y" ]; then
  depends  xmms  '--with-xmms'  &&
  depends  id3lib
fi

if [ "$FAAD_CVS" = "y" ]; then
  depends  CVS
fi

optional_depends  MP4V2                \
                  "--with-mpeg4ip"        \
                  "--without-mpeg4ip"     \
                  "For MPEG4v2 support"
