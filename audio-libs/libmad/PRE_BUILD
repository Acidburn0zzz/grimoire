default_pre_build &&
cd "$SOURCE_DIRECTORY" &&
patch -p1 -i $SPELL_DIRECTORY/$SPELL-pkgconfig.patch &&
patch -Np1 < "$SPELL_DIRECTORY/libmad-0.15.1b-no-cflag-mess.patch" &&
sedit 's:AM_CONFIG_HEADER:AC_CONFIG_HEADERS:' configure.ac &&
libtoolize -c -f &&
aclocal-1.9 &&
autoconf &&
automake-1.9 --foreign --add-missing
