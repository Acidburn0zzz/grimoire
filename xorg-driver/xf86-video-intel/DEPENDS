depends libdrm &&
depends libxvmc &&
depends xproto &&
depends xorg-server &&
depends util-macros &&

optional_depends mesalib \
                 "--enable-dri" \
                 "--disable-dri" \
                 "Do you want dri support" &&

if is_depends_enabled $SPELL mesalib; then
  sub_depends mesalib DRI
fi
