config_query_option XF86_VIDEO_INTEL_OPTS "Assume only KMS support?" n \
                                          "--enable-kms-only" \
                                          "--disable-kms-only" &&

config_query_option XF86_VIDEO_INTEL_OPTS "Assume only UMS (no KMS) support?" n \
                                          "--enable-ums-only" \
                                          "--disable-ums-only"
