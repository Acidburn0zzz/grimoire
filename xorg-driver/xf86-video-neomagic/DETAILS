          SOURCE=$SPELL-$VERSION.tar.bz2
      SOURCE_GPG="gurus.gpg:$SOURCE.sig:UPSTREAM_HASH"
   SOURCE_URL[0]=http://xorg.freedesktop.org/releases/individual/driver/${SOURCE}
#     SOURCE_HASH=sha512:61b181a70e3b2d4ebdb8f7c3948a2ee5042deef45c69480d4209880cbbd794ee6e5884372abd84850d9fa65b53512e5560fdd2936b9d994113bda6b3d20f278f
