           SPELL=xf86-input-aiptek
         VERSION=1.3.0
          SOURCE=$SPELL-$VERSION.tar.bz2
      SOURCE_GPG="gurus.gpg:$SOURCE.sig:UPSTREAM_HASH"
   SOURCE_URL[0]=http://xorg.freedesktop.org/releases/individual/driver/${SOURCE}
#     SOURCE_HASH=sha512:52f731abb46ad7a6b7bc4113c2cc05ba05088af73b6269fdd10e9afb2530a6261921957b136d23f336432c8a8e9ec3cbc7bda61dfc8fec028df2a7de91c875c9
