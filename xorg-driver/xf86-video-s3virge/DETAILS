   SOURCE_URL[0]=http://xorg.freedesktop.org/releases/individual/driver/${SOURCE}
#     SOURCE_HASH=sha512:e9cb144e2d616d9d2fab7d308caaca56cf3944000929f3fead8dccfaf0faa77eeeffc1364e33c7933b2c514d8cc9f3051390cbe868256fc9928e8e16cb845a50
