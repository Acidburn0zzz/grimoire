depends  util-macros                           &&
depends  xproto                                &&
depends  xorg-server                           &&
depends  libdrm                                &&
depends  libxvmc                               &&
if [[ "$XF86_VIDEO_OPENCHROME_BRANCH" == "scm" ]]; then
depends  subversion
fi &&

optional_depends  MESALIB                      \
                  "--enable-dri"               \
                  "--disable-dri"              \
                  "Do you want dri support"    &&

if  is_depends_enabled  $SPELL  mesalib
then
  sub_depends  mesalib  DRI
fi
