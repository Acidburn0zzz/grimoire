depends  util-macros                           &&
depends  xproto                                &&
depends  xorg-server                           &&
depends  libdrm                                &&
depends  libxvmc                               &&
if [[ "$OPENCHROME_SVN" == "y" ]]; then
depends  subversion
fi &&

optional_depends  mesalib                      \
                  "--enable-dri"               \
                  "--disable-dri"              \
                  "Do you want dri support"    &&

if  is_depends_enabled  $SPELL  mesalib
then
  sub_depends  mesalib  DRI
fi
