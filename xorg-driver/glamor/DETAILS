           SPELL=glamor
  if [[ $GLAMOR_AUTOUPDATE == y ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=${SPELL}-git.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}-git
      SOURCE_URL=git://anongit.freedesktop.org/git/xorg/driver/glamor:$SPELL-git
   SOURCE_IGNORE=volatile
