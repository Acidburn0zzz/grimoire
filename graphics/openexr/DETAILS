   SOURCE_URL[0]=http://savannah.nongnu.org/download/$SPELL/$SOURCE
   SOURCE_URL[1]=http://www.openexr.com/downloads/$SOURCE
  SOURCE_HASH[0]=sha512:017abbeeb6b814508180721bc8e8940094965c4c55b135a198c6bcb109a04bf7f72e4aee81ee72cb2185fe818a41d892b383e8d2d59f40c673198948cb79279a
