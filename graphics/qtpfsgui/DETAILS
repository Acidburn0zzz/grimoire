   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:215bf59c6baf4a50713c5e6644a86041152698af790ed0b581565f50dece7a0412b1f77e0598e90b3b9fa35cd6715bdb46b421b15f9646c18b22ec98bca3d3eb
