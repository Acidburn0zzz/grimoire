   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:5c07bad8f3cc749ab5171aa9b2c7bcbbaf5b0a9b018bc3ff6b2568829272b4784807887b87500a6ec465f365a881b540c21ddf0ff6734fb1014394e1343c684f
