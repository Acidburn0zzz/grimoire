         VERSION=2.3.18
          SOURCE=$SPELL-$VERSION.tar.bz2
     SOURCE_HASH=sha512:5123cf953d3ca29f140f61b59a7d51a149b9f2afacd9e5e67b8495fc5d633627d6fbcdef211f6ce880e9db913a9b0eb2dcff95909e8b8f8577369a0d136ca657
   SOURCE_URL[0]=ftp://ftp.gimp.org/pub/gimp/v${VERSION%.*}/$SOURCE
else
         VERSION=2.2.16
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=ftp://ftp.gimp.org/pub/gimp/v${VERSION%.*}/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME"
