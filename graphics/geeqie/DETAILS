   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:ef802093f25f75c71a67b2b17b90b64b9729bd84396e120690cfd2efc2c882e1d106223a6e17c4cea2cb97a75f1250290fbd3e1e5a18bed5bef905842bd694ba
