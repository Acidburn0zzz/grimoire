           SPELL=geeqie
if [[ "${GEEQIE_SVN}" == "y" ]] ; then
  if  [[  "$GEEQIE_SVN_AUTOUPDATE"  ==  "y"  ]];  then
         VERSION=$(date +%Y%m%d)
  else
