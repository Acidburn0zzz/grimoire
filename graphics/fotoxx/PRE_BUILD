default_pre_build                                              &&
cd $SOURCE_DIRECTORY                                           &&
sed -i "s:^CFLAGS = -O \(.*\):CFLAGS = \1 $CFLAGS:g" Makefile  &&
sed -i "s:^LFLAGS = -O \(.*\):LFLAGS = \1 $CFLAGS:g" Makefile  &&
sed -i "s:^LAUNCHER = .*:LAUNCHER = kornelix-\$(PROGRAM).desktop:g" Makefile
