depends cmake &&
depends libjpeg-turbo &&
depends libx11 &&
depends libxext &&
depends OPENGL &&

optional_depends openssl \
                 "-DVGL_USESSL=ON" \
                 "-DVGL_USESSL=OFF" \
                 "for encryption feature in the VGL Transport" &&

optional_depends libxv \
                 "-DVGL_USEXV=ON" \
                 "-DVGL_USEXV=OFF" \
                 "for X Video support"
