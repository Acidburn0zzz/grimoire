  FORCE_DOWNLOAD=on
else
         VERSION=1.0-4
          SOURCE=$SPELL-$VERSION.tar.gz
    SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/CinePaint/CinePaint-${VERSION}/${SOURCE}
