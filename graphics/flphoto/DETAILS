   SOURCE_URL[0]=$SOURCEFORGE_URL/fltk/$SOURCE
     SOURCE_HASH=sha512:27bd7f11c3e3402efa5f2ed5a92445ae2b3833db0fcba87c4e238e409156c9f7c6c07354fce2bd609bb712135cf7f7af2e5faf3bad57e027a0613b35c493fd64
