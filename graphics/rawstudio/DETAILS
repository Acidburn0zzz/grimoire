           SPELL=rawstudio
if [[ $RAWSTUDIO_SCM == y ]]; then
if [[ $RAWSTUDIO_SCM_AUTO == y ]]; then
         VERSION=$(date +%Y%m%d)
else
         VERSION=scm
fi
          SOURCE=${SPELL}-scm.tar.bz2
    SOURCE_HINTS=old_svn_compat
   SOURCE_URL[0]=svn://rawstudio.org/svn/rawstudio/trunk/:$SPELL-scm
   SOURCE_IGNORE=volatiles
