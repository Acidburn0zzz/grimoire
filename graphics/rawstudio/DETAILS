else
         VERSION=1.2
          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://rawstudio.org/files/release/$SOURCE
     SOURCE_HASH=sha512:4cdae123ab71b8aa030ab2ea99bbdc1a6648b8f9c93f7c3f83236af4bd8db6b6c5a18043a96ca6939638708727e260232765cdca20d4416b28c384cc27ab3add
