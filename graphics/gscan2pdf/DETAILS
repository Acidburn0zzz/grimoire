   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:716d583abed3aef79aba7b89abacd6ddfec0088796b361a8173ba4736819d5b8962dbb7dd82d2c6632ecd757060e6ee7df902cb4ef3c875b291f811db7812663
