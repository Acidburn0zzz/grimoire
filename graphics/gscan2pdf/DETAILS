   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:65f6c4f2022661ed9d2d29e439c332b963bdd8b8478c9c3f6a05e769b6e957522bdaa65c4e2400ff5403166472128aa0d55f8285e0e517664628937de29e4cd0
