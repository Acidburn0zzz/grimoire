                  '--with-fftw' \
                  '--without-fftw' \
                  'for Fast Fourier Transform support' &&

optional_depends  'libpng' \
                  '--with-png' \
                  '--without-png' \
                  'for PNG image support' &&

optional_depends  'JPEG' \
                  '--with-jpeg' \
                  '--without-jpeg' \
                  'for JPEG image support' &&

