                  '--without-jp2' \
                  'for JPEG-2000 image support' &&

optional_depends  'tiff' \
                  '--with-tiff' \
                  '--without-tiff' \
                  'for TIFF image support' &&

optional_depends  'openexr' \
                  '--with-openexr' \
                  '--without-openexr' \
                  'for high dynamic-range image format' &&

