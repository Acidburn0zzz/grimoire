           SPELL=amarok2
          SPELLX=${SPELL//2}
if [[ $AMR_SVN == y ]];then
         VERSION=git
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_IGNORE=volatile
   SOURCE_URL[0]=git://gitorious.org/amarok/amarok.git
