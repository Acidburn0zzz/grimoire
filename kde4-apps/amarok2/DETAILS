           SPELL=amarok2
          SPELLX=${SPELL//2}
if [[ $AMR_SVN == y ]];then
         VERSION=svn
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/extragear/multimedia/$SPELLX:$SPELLX
else
        VERSION=1.80
     SOURCE_HASH=sha512:665ff652cd09e173b633a6accfce4e1dbe3eaf0a0f9af840de40346571e85cd5d9bbd58504559d8c52b74f40f3210fdb9dca8f8d5802c944110f2d68d022da0a
          SOURCE=$SPELLX-$VERSION.tar.bz2
