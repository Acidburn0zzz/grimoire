SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELLX
   SOURCE_URL[0]=$KDE_URL/${KOFF_VER:-stable}/$SPELLX/src/$SOURCE
        WEB_SITE=http://www.koffice.org
