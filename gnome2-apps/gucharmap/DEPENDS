                 "--enable-introspection"          \
                 "--disable-introspection"         \
                 "to enable GObject introspection" &&

optional_depends gtk-doc                           \
                 "--enable-gtk-doc"                \
                 "--disable-gtk-doc"               \
                 "to build documentation"
