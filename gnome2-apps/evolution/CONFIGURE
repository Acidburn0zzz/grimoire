if [[ -z $IPV6 ]]; then
  persistent_read evolution2 IPV6 IPV6
  persistent_read evolution2 NNTP NNTP
  persistent_read evolution2 PLUGINS PLUGINS
  persistent_add IPV6 NNTP PLUGINS
fi
config_query "IPV6" "Enable support for resolving IPv6 addresses?" y &&
config_query "NNTP" "Build Usenet news (NNTP) backend" y &&
config_query "PLUGINS" "Enable Plugins?" y


