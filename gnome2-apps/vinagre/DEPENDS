depends libxml2 &&
depends gtk+2 &&
depends gtk-vnc &&
depends glib2 &&
depends gconf2 &&
depends gnome-doc-utils &&
depends libgnome-keyring &&

optional_depends -sub "GTK2" avahi            \
                 "--enable-avahi"             \
                 "--disable-avahi"            \
                 "to auto-discover machines"  &&

optional_depends gnome-panel                  \
                 "--enable-applet"            \
                 "--disable-applet"           \
                 "to build the panel applet"  &&

optional_depends telepathy-glib               \
                 "--enable-telepathy=yes"     \
                 "--enable-telepathy=no"      \
                 "to enable telepathy"        &&

optional_depends openssh                      \
                 "--enable-ssh"               \
                 "--disable-ssh"              \
                 "to enable SSH plugin"       &&

optional_depends rarian \
                 "--enable-scrollkeeper" "--disable-scrollkeeper" \
                 "to update the scrollkeeper database"
