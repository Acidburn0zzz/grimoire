                 "--with-freetype" \
                 "--without-freetype" \
                 "for Freetype support" &&

optional_depends libgnomeui \
                 "--enable-gnome" \
                 "--disable-gnome" \
                 "enable gnome code" &&

optional_depends pygtk2 \
                 "--with-python" \
                 "--without-python" \
                 "enable python plugin"
