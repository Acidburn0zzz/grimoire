#!/bin/sh

PROGRAM=/usr/sbin/ferm
RUNLEVEL=3
ARGS="/etc/sysconfig/ferm"
NEEDS="+network"

[ ! -e /proc/net/ip_tables_names ] && /sbin/modprobe ip_tables

. /etc/init.d/smgl_init

stop() {
    echo "Flushing $NAME rules..."
    ferm -F $ARGS
    evaluate_retval
}

usage() {
    echo "Usage: $0 {start|stop|restart}"
}
