depends expat &&
depends ldns &&
depends SSL &&

optional_depends -sub "1.0" SSL \
                            "--enable-gost" \
                            "--disable-gost" \
                            "for GOST support" &&

optional_depends -sub PYTHON swig \
                             "--with-pyunbound" \
                             "--without-pyunbound" \
                             "to build PyUnbound" &&

if is_depends_enabled $SPELL swig; then
  config_query_option UNBOUND_OPTS "Install Python module?" y \
                                   "--with-pythonmodule" \
                                   "--without-pythonmodule"
fi
