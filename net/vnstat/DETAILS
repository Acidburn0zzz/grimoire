   SOURCE_URL[0]=http://humdi.net/vnstat/$SOURCE
     SOURCE_HASH=sha512:99ec0d275eafe6fe91d286107a4ea5411d5fdba294b69dca8c6c7692044d80f258d4755ee60bcf3d83f9e8db3d92ef173c10adaaa64916398e2ae7604168bf10
