   SOURCE_URL[0]=http://humdi.net/vnstat/$SOURCE
     SOURCE_HASH=sha512:0f6ed48ed19765ac83fc2559e6c588733eb18c2b1bafff679b90768fa191114796629cebb6029c147512f87edfcc7d7c5bff64086eb98cdde3aaada8ad6c7a92
