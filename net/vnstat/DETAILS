   SOURCE_URL[0]=http://humdi.net/vnstat/$SOURCE
     SOURCE_HASH=sha512:82fae20556f5fbb795d8c7ed997f5694710e44c711d339723139e948210c7868e5ee4802a0e6f5e799cf213bfad544995001f20edc8d34a71b9d6da0b8b590ca
        WEB_SITE=http://humdi.net/vnstat/
         ENTERED=20070513
