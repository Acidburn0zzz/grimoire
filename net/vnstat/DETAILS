   SOURCE_URL[0]=http://humdi.net/vnstat/$SOURCE
     SOURCE_HASH=sha512:8cb48e3fcc44e1c1511a9718f8616f5998765280f49bff65ea3f786b89af50131469d8205df98fe67c6734ffa1b8aad0d42deed1c3ddf3976992c3f2c16e4b7d
