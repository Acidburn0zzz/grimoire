   SOURCE_URL[0]=http://humdi.net/vnstat/$SOURCE
     SOURCE_HASH=sha512:cc2e9936be1e846fa1c37e188000dff9d4d42da9883f568590bbe507187c64b8fb0f616350f18b2658272d3e0d96162abcfb89a31a33f78aec114f3035790dc8
