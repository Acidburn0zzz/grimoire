depends zlib &&

optional_depends openssl \
                 "--with-openssl" \
                 "--without-openssl" \
                 "for OpenSSL support" &&

optional_depends MYSQL \
                 "--with-mysql" \
                 "--without-mysql" \
                 "for MySQL support" &&

optional_depends postgresql \
                 "--with-postgresql" \
                 "--without-postgresql" \
                 "to use PostgreSQL library"
