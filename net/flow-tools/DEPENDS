depends zlib &&

optional_depends SSL \
                 "--with-SSL" \
                 "--without-SSL" \
                 "for OpenSSL support" &&

optional_depends MYSQL \
                 "--with-mysql" \
                 "--without-mysql" \
                 "for MySQL support" &&

optional_depends postgresql \
                 "--with-postgresql" \
                 "--without-postgresql" \
                 "to use PostgreSQL library"
