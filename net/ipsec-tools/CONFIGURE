                                      "--enable-adminport" \
                                      "--disable-adminport" &&

config_query_option IPSEC_TOOLS_OPTS "Enable IKE fragmentation payload support?" n \
                                      "--enable-frag" \
                                      "--disable-frag" &&

config_query_option IPSEC_TOOLS_OPTS "Enable dead peer detection?" n \
                                      "--enable-dpd" \
                                      "--disable-dpd" &&

config_query_option IPSEC_TOOLS_OPTS "Enable hybrid authentication (including mode-cfg and Xauth) support?" n \
                                      "--enable-hybrid" \
                                      "--disable-hybrid" &&

config_query_option IPSEC_TOOLS_OPTS "Enable statistics logging function?" y \
                                      "--enable-stats" \
                                      "--disable-stats"
