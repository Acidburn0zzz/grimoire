config_query_option IPSEC_TOOLS_OPTS "Enable IPv6?" y \
                                     "--enable-ipv6" \
                                     "--disable-ipv6" &&

config_query_option IPSEC_TOOLS_OPTS "Enable NAT-Traversal support?" n \
                                      "--enable-natt" \
                                      "--disable-natt" &&

config_query_option IPSEC_TOOLS_OPTS "Enable statistics logging function?" y \
                                      "--enable-stats" \
                                      "--disable-stats"
