default_pre_build &&
cd "$SOURCE_DIRECTORY" &&

if [[ ${VERSION/.*} == 4 ]]; then
  sed -i "s:/man:/share/man:;s:share/man8:man8:" Makefile
else
  cd "$INSTALL_ROOT/usr/src/linux" &&

  if ! grep -q NFNL_SUBSYS_IPSET include/linux/netfilter/nfnetlink.h; then
    patch -d  -Np1 < "$SOURCE_DIRECTORY/netlink.patch"
  fi
fi
