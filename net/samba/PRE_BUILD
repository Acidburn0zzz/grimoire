default_pre_build      &&
cd  $SOURCE_DIRECTORY  &&

sedit  's!libsmbclient.*\$(LIBDIR)!&/..!'  source/Makefile.in  &&
patch -p2 < $SCRIPT_DIRECTORY/pie.patch                        &&

if [[ "$SAMBA_VSCAN" == "y" ]] ; then
        cd $SOURCE_DIRECTORY/examples/VFS/ &&
        unpack_file 2 &&
        cd $SOURCE_DIRECTORY
fi
