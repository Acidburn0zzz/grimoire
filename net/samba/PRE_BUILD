default_pre_build      &&
cd  $SOURCE_DIRECTORY  &&

if [[ "${VERSION}" = "3.0.25c" ]]; then
    patch -p0 < $SPELL_DIRECTORY/samba-3.0.25c-python_bindings_fix.patch
fi &&

sedit  's!libsmbclient.*\$(LIBDIR)!&/..!'  source/Makefile.in  &&

if [[ "$SAMBA_VSCAN" == "y" ]] ; then
        cd $SOURCE_DIRECTORY/examples/VFS/ &&
        unpack_file 2 &&
        cd $SOURCE_DIRECTORY
fi
