depends gmp &&
depends iproute2 &&
depends iptables &&

local IPR2VER=$(installed_version iproute2) &&

if spell_ok iproute2 && [[ $IPR2VER < 2.6.08 ]]; then
  force_depends iproute2
fi &&

. "$GRIMOIRE/FUNCTIONS" &&
local KVER=$(get_kernel_version) &&

if [[ $KVER < 2.6.09 ]]; then
  depends ipsec-tools
fi
