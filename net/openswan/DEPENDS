depends gmp &&
depends iproute2 &&
depends iptables &&

local IPR2REV=$(installed_version iproute2 | cut -d. -f3) &&

if spell_ok iproute2 && [[ $IPR2REV -le 8 ]]; then
  force_depends iproute2
fi &&

. "$GRIMOIRE/FUNCTIONS" &&
local KREV=$(get_kernel_version | cut -d. -f3) &&

if [[ $KREV -le 9 ]]; then
  depends ipsec-tools
fi
