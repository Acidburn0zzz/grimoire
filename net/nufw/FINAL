message "${QUERY_COLOR}Warning: you need to generate keyfiles yourself."
message "You can use commands like these to do so:${DEFAULT_COLOR}"
message "openssl req -new -x509 -keyout private/CAkey.pem -out private/CAcert.pem"
message "openssl genrsa -out private/nufw-key.pem"
message "openssl genrsa -out private/nuauth-key.pem"
message "openssl req -new -key private/nufw-key.pem -out nufw.csr"
message "openssl req -new -key private/nuauth-key.pem -out nuauth.csr"
message "openssl x509 -req -days 365 -in nufw.csr -CA private/CAcert.pem -CAkey private/CAkey.pem -CAcreateserial -out nufw-cert.pem"
message "openssl x509 -req -days 365 -in nuauth.csr -CA private/CAcert.pem -CAkey private/CAkey.pem -CAcreateserial -out nuauth-cert.pem"
