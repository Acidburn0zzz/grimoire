#!/bin/bash

PROGRAM=/usr/bin/fail2ban
RUNLEVEL=3
NEEDS="+network +remote_fs"

. /etc/init.d/smgl_init

start() {
  echo "Starting Fail2Ban"
  $PROGRAM -b > /dev/null 2>&1
  evaluate_retval
}

stop() {
  echo "Stopping Fail2Ban"
  $PROGRAM -k > /dev/null 2>&1
  evaluate_retval
}

usage()
{
  echo "Usage: $0 {start|stop|restart}"
}
