depends  autoconf  &&
depends  automake  &&
depends  gawk      &&
depends  geoip     &&
depends  gdbm      &&
depends  libtool   &&
depends  libpcap   &&
depends  libpng    &&
depends  m4        &&
depends  perl      &&
depends  zlib      &&

optional_depends  'MYSQL'                       \
                  '--enable-mysql'              \
                  '--disable-mysql'             \
                  'for MySQL database support'  &&

optional_depends  'SSL'                                       \
                  "--with-ssl --with-ssl-root=$INSTALL_ROOT/usr"  \
                  '--without-ssl'                                 \
                  'for HTTPS (secure HTTP) support'               &&


optional_depends  'tcp_wrappers'              \
                  '--with-tcpwrap'            \
                  '--without-tcpwrap'         \
                  'for TCP Wrappers support'
