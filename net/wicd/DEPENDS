depends dbus &&
depends dbus-python &&
depends pygtk2 &&

optional_depends acpid "--resume=${INSTALL_ROOT}/etc/acpi/resume.d/ \
                        --suspend=${INSTALL_ROOT}/etc/acpi/suspend.d/" \
                       "--no-install-acpi" \
                       "to install the suspend.d and resume.d acpi scripts" &&

optional_depends pm-utils "--pmutils=${INSTALL_ROOT}/usr/lib/pm-utils/sleep.d/" \
                          "--no-install-pmutils" \
                          "to install pm-utils hooks" &&

if [[ $WICD_KDEVER == "3.x" ]]; then
  depends kdebase
elif [[ $WICD_KDEVER == "4.x" ]]; then
  depends kdebase4
fi
