         SOURCE2="${SPELL}_${VERSION}-${DEB_PL}.diff.gz"
    SOURCE2_HASH=sha512:6ac449bd8f954806dd44f9273921045d9bbf3f47b762a6ce47cb91465e65f5b3dd886b004478b3ba6420116d8df7423dd415e3539ec581f83593b7462bba9f8e
