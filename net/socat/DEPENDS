depends  autoconf  &&

optional_depends SSL  '--enable-openssl' \
                          '--disable-SSL' \
                          'encryption support' &&
optional_depends readline '--enable-readline' \
                          '--disable-readline' \
                          'line editing' &&
optional_depends tcp_wrappers '--enable-libwrap' \
                          '--disable-libwrap' \
                          'monitor TCP traffic'
