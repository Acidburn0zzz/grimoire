        WEB_SITE=http://www.chiark.greenend.org.uk/~ian/adns/
      SOURCE_GPG=adns.gpg:$SOURCE2:UPSTREAM_KEY
  SOURCE2_IGNORE=signature
         ENTERED=20011116
