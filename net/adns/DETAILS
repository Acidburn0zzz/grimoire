          SOURCE=$SPELL-$VERSION.tar.gz
         SOURCE2=${SOURCE}.sig
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.chiark.greenend.org.uk/~ian/adns/ftp/$SOURCE
  SOURCE2_URL[0]=${SOURCE_URL}.sig
