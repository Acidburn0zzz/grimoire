   SOURCE_URL[0]=${SOURCEFORGE_URL}/$SPELL/$SOURCE
     SOURCE_HASH=sha512:3459de0d32f40fa9b55badd97ae806809cfe7ae7b382087a6d9e50498d4eface83e48e4c731a348ab4d45b1148aa5647adbfe4c961b0f1bfe63ad7abc5c17da6 
