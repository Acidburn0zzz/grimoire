#!/bin/bash

PROGRAM=/usr/sbin/smbd
RUNLEVEL=3
NEEDS="+network +remote_fs"

. /etc/init.d/smgl_init

start() {
	start_smbd
	start_nmbd
}

start_smbd() {
	echo "Starting smbd"
	/usr/sbin/smbd
	evaluate_retval
}

start_nmbd() {
	echo "Starting nmbd"
	/usr/sbin/nmbd
	evaluate_retval
}


stop() {
	stop_nmbd
	stop_smbd
}

stop_smbd() {
	echo "Stopping smbd"
	killproc smbd
}

stop_nmbd() {
	echo "Stopping nmbd"
	killproc nmbd
}

restart() {
	stop &&
	sleep 1 &&
	start
}
