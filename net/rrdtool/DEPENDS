depends freetype2 &&
depends libxml2 &&
depends libpng &&
depends pango &&

optional_depends gettext \
                 "--enable-libintl" \
                 "--disable-libintl" \
                 "for i18n support" &&

optional_depends perl \
                 "--enable-perl-site-install" \
                 "--disable-perl" \
                 "for Perl modules" &&

optional_depends python \
                 "--enable-python" \
                 "--disable-python" \
                 "for Python modules" &&

optional_depends ruby \
                 "--enable-ruby-site-install" \
                 "--disable-ruby" \
                 "for Perl modules" &&

optional_depends tcl \
                 "--enable-tcl-site" \
                 "--disable-tcl" \
                 "for Tcl modules"
