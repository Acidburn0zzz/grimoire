         VERSION=0.7.1
	  BRANCH=`echo $VERSION|cut -d. -f1,2`
          SOURCE="$SPELL-${VERSION}.tar.bz2"
   SOURCE_URL[0]=http://ftp.gnome.org/pub/GNOME/sources/$SPELL/${BRANCH}/${SOURCE}
     SOURCE_HASH=sha512:4c8cdb9ef35890a805933bb5a9d8ec0d2ced8fa5fd30e1d285b3f7ca4007de8bd59228d1b199a4a1d90f6d21efc839f7b3d7a39ab66f160aebb082ae663d14cf
