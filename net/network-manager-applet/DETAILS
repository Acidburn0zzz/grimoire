           SPELL=network-manager-applet
if [[ $NETWORK_MANAGER_APPLET_SCM == y ]]; then
  if [[ $NETWORK_MANAGER_APPLET_SCM_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE="$SPELL-svn.tar.bz2"
