optional_depends curl \
		 --{en,dis}able-libcurl \
		 "getwork and GBT support" &&

optional_depends ncurses \
                 --with{,out}-curses \
                 "curses user interface" &&

optional_depends LIBUSB \
		 --with{,out}-system-libusb \
		 "Compile against system libusb (otherwise uses built-in)"
