         SOURCE2=$SOURCE.sig
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://savannah.nongnu.org/download/normalize/$SOURCE
  SOURCE2_URL[0]=${SOURCE_URL[0]}.sig
        WEB_SITE=http://normalize.nongnu.org/
         ENTERED=20011217
