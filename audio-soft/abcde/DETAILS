           SPELL=abcde
         VERSION=2.3.3
          SOURCE=${SPELL}_${VERSION}.orig.tar.gz
         SOURCE2=${SPELL}_${VERSION}-1.diff.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://www.hispalinux.es/~data/files/${SOURCE}
  SOURCE2_URL[0]=http://www.hispalinux.es/~data/files/${SOURCE2}
     SOURCE_HASH=sha512:87555e5a42d4935566902b2158b69f0d75e16a81417282edc4d62f0648854d9095eb7189dbf033148864407dfebae0cee18050a9ec07c14743d51069ebe42532
    SOURCE2_HASH=sha512:2c113c718b6c977c546022199092831155acb469b8177be5ac8c28808300dc1fc849c2c5707b43cb24f5de43cb99b9296d2ffa843075f6f8be8918a15b61c0b2
