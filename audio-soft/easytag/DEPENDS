                  "--enable-nls"        \
                  "--disable-nls"       \
                  "Enable nls support"  &&

optional_depends  wavpack                   \
                  "--enable-wavpack"        \
                  "--disable-wavpack"       \
                  "Enable Wavpack support"  &&

optional_depends  libmp4v2                        \
                  "--enable-mp4"                  \
                  "--disable-mp4"                 \
                  "Enable Mp4 container support"
