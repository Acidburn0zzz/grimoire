   SOURCE_URL[0]=http://www.jpj.net/~trevor/$SPELL/$SOURCE
  SOURCE2_URL[0]=${SOURCE_URL[0]}.sig
        WEB_SITE=http://jpj.net/~trevor/aumix.html
         ENTERED=20010922
