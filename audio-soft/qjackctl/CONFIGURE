config_query_option  QJCTL_TRAY                \
                     "Enable system tray?"  y  \
                     "--enable-system-tray"    \
                     "--disable-system-tray"   &&

config_query_option  QJCTL_JACK_MIDI                 \
                     "Enable JACK MIDI support?"  y  \
                     "--enable-jack-midi"            \
                     "--disable-jack-midi"
