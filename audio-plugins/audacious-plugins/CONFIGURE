config_query_option AUDACIOUS_IPV6 \
                    'for IPv6 support' n \
                    '--enable-ipv6' \
                    '--disable-ipv6' &&
config_query_option AUDACIOUS_STATUS \
                    'for a status icon' y \
                    '--enable-statusicon' \
                    '--disable-statusicon' &&
config_query_option AUDACIOUS_OSD \
                    'for OSD plugin' y \
                    '--enable-aosd' \
                    '--disable-aosd' &&
if [[ "$AUDACIOUS_OSD" == '--enable-aosd' ]]; then
  config_query_option AUDACIOUS_COSD \
                    'for X Composite OSD plugin' y \
                    '--enable-aosd-xcomp' \
                    '--disable-aosd-xcomp'
fi
