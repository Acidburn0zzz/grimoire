if [[ $KDE_VER == devel ]]; then
  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
  FORCE_DOWNLOAD=on
else
  if [[ "${KDE_VER}" == "unstable" ]];then
         VERSION=4.0.82
     SOURCE_HASH=sha512:9b4f574c4f770a2a0a8fd1201659ca1fa048916b0c9d00028fa04e35e26429426bc41cf79bc25f341ad42b4124fde223fa17ba18bd020f50ee6b751d91a25de1
