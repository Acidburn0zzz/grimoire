           SPELL=kdelibs4
          SPELLX=${SPELL//4}
if [[ $KDE_VER == devel ]]; then
  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
  FORCE_DOWNLOAD=on
else
  if [[ "${KDE_VER}" == "unstable" ]];then
         VERSION=4.0.84
     SOURCE_HASH=sha512:f46d43a55a491e7c77d74efb7e93a985f2a7e890db5072e092b2a7221271cda2aaf4fc729f0da2b6d826eebf70dd8a7fb958b94661ade25a3d2d5e469a952a54
  else 
