           SPELL=kdelibs4
          SPELLX=${SPELL//4}
if [[ $KDE_VER == devel ]]; then
  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
  FORCE_DOWNLOAD=on
else
  if [[ "${KDE_VER}" == "unstable" ]];then
         VERSION=4.0.83
     SOURCE_HASH=sha512:8aa4ae1d453216fde871566748fb62fd4a257b43902d9fb4eec68bfe819568f4e7c4114ccaa67459fef90bfca007bf7518da264357b7fecf9b85303b2f39129d
