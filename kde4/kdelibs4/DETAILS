           SPELL=kdelibs4
          SPELLX=${SPELL//4}
if [[ $KDE_VER == devel ]]; then
  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
  FORCE_DOWNLOAD=on
else
  if [[ "${KDE_VER}" == "unstable" ]];then
         VERSION=4.0.85
     SOURCE_HASH=sha512:49ea207caa79031fc73dfa2afe1c57d845df6cc5c8f573006487a33e1b4b5f967c83d6e200a64261e9bec13efba8cb43180b3701b69659a7f50adbbfd8e743c9
  else 
