           SPELL=kdelibs4
          SPELLX=${SPELL//4}
if [[ $KDE_VER == devel ]]; then
  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
  FORCE_DOWNLOAD=on
else
  if [[ "${KDE_VER}" == "unstable" ]];then
         VERSION=4.0.80
     SOURCE_HASH=sha512:dfb56d841d8b0fb3cdf1646c286b4f307d2962a4bf3ca9f9c6426524e5840d81bcf1452444904c8ce359eb2a6f5eb8d78a80e1dfac233c65d1ae39fc9f79fa93
