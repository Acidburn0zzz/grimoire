  if [[ $KDE_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELLX-$VERSION.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/KDE/$SPELLX:$SPELL
else
  if [[ ${KDE_VER} == unstable ]];then
         VERSION=4.0.74
     SOURCE_HASH=sha512:53a29b23fdbf2894bf320b8ebc9713509bc8edf6bf706da2a320fb0f3cb18067f9956e37ce6ec4d5d8181477190175ece2cd163066e47ed7a439dd61afa7d1ed
  else 
