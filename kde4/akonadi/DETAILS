if [[ $AKONADI_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
else
         VERSION=svn
fi
   SOURCE_IGNORE=volatile
          SOURCE=$SPELL-$VERSION.tar.bz2
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
#   SOURCE_URL[0]=$KDE_URL/unstable/${VX}/support/$SOURCE
