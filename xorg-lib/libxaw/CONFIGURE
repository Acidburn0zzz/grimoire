config_query_option LIBXAW_OPTS        \
          'Enable building of libXaw.so.6?'  \
          y                            \
          '--enable-xaw6'              \
          '--disable-xaw6'             &&

config_query_option LIBXAW_OPTS        \
          'Enable building of libXaw.so.7 (recommended)?'  \
          y                            \
          '--enable-xaw7'              \
          '--disable-xaw7'
