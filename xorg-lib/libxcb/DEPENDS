depends xcb-proto  &&
local xcb_version=$(installed_version xcb-proto) &&
if [[ $xcb_version == 1.2 ]] || [[ $xcb_version == 1.0 || $xcb_version == 0.9.93 ]]; then
  force_depends xcb-proto
fi &&
depends libpthread-stubs  &&
depends automake          &&
depends autoconf          &&
depends pkgconfig         &&
depends libtool           &&
depends libxslt           &&
depends libxau            &&
depends util-macros       &&

optional_depends  libxcomposite                                        \
                  '--enable-composite'                                 \
                  '--disable-composite'                                \
                  'for X11 Composite extension support (RECOMMENDED)'  &&

optional_depends  libxdamage                                                \
                  '--enable-damage'                                         \
                  '--disable-damage'                                        \
                  'for X11 Damaged region extension support (RECOMMENDED)'  &&

optional_depends  libxdmcps                                                         \
                  ''                                                                \
                  ''                                                                \
                  'for X11 Display Manager Control Protocol support (RECOMMENDED)'  &&

optional_depends  libxxinerama                                        \
                  '--enable-xinerama'                                 \
                  '--disable-xinerama'                                \
                  'for X11 multi-screen layout support (RECOMMENDED)' &&

optional_depends  libxfixes                                                   \
                  '--enable-fixes'                                            \
                  '--disable-fixes'                                           \
                  'for X11 workarounds for various limitations (RECOMMENDED)' &&

optional_depends  libxrandr                                          \
                  '--enable-randr'                                   \
                  '--disable-randr'                                  \
                  'for X11 Resize and Rotate support (RECOMMENDED)'  &&

optional_depends  libxscrnsaver                                 \
                  '--enable-screensaver'                        \
                  '--disable-screensaver'                       \
                  'for X11 screen saver support (RECOMMENDED)'  &&

optional_depends  libxv                                            \
                  '--enable-xv'                                    \
                  '--disable-xv'                                   \
                  'for X11 Video extension support (RECOMMENDED)'  &&

optional_depends  libxvmc                                                     \
                  '--enable-xvmc'                                             \
                  '--disable-xvmc'                                            \
                  'for X11 Video Motion Compensationextension (RECOMMENDED)'
