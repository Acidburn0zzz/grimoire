default_pre_build &&
cd "$SOURCE_DIRECTORY" &&

if ! is_depends_enabled $SPELL cyrusl-sasl; then
  sed -i "s:sasl2 ::" setup.cfg
fi &&

sed -i "s|^\(library_dirs[[:space:]]*=\).*$|\1 /usr/lib     /usr/lib/sasl2|" \
  setup.cfg &&
sed -i "s|^\(include_dirs[[:space:]]*=\).*$|\1 /usr/include /usr/include/sasl|" \
  setup.cfg
