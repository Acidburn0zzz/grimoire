           SPELL=django
if [[ $DJANGO_SVN == y ]]; then
    if [[ $DJANGO_SVN_AUTOUPDATE == y ]]; then
        VERSION=$(date +%Y%m%d)
    else
        VERSION=svn
    fi
          SOURCE=$SPELL-svn.tar.bz2
