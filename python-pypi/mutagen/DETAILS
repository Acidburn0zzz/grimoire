   SOURCE_URL[0]=http://mutagen.googlecode.com/files/$SOURCE
     SOURCE_HASH=sha512:f47efdb80f4fa308315d7fb693ace729577ad54c42b080824ad19b6bcfca3b3ae159a1fd16bed645e6998e4bf519e8b3470ad9d33a8a70702038546795a006e3
