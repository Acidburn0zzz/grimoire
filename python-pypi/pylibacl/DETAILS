   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:188cf8921cecbe9ce5c83505af4fcb8f55c8f2fc94b0e8eced700000713bcf2837abcf1d91cefa5630b9865796079bc0bd08fb646b77bba3b62d244b9816047f
