depends  g++       &&
depends  X11-LIBS  &&

source $GRIMOIRE/FUNCTIONS  &&

if check_if_xorg_modular_libs; then
  optional_depends  libxft           \
                    "--enable-xft"   \
                    "--disable-xft"  \
                    "for XFT support"
fi &&

optional_depends  perl                             \
                  "--enable-perl"                  \
                  "--disable-perl"                 \
                  "for embedded perl interpreter"  &&

optional_depends  libafterimage                     \
                  "--enable-afterimage"             \
                  "--disable-afterimage"            \
                  "for background images"
