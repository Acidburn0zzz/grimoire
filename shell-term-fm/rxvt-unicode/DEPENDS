depends g++ &&
depends libxrender &&

optional_depends  libxft           \
                  "--enable-xft"   \
                  "--disable-xft"  \
                  "for XFT support"

optional_depends  perl                             \
                  "--enable-perl"                  \
                  "--disable-perl"                 \
                  "for embedded perl interpreter"  &&

optional_depends  LIBAFTERIMAGE                     \
                  "--enable-afterimage"             \
                  "--disable-afterimage"            \
                  "for background images"
