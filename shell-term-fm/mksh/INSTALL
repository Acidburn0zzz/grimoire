install -d -o root -g root -m 755 ${INSTALL_ROOT}/bin
install -c -s -o root -g root -m 555 mksh ${INSTALL_ROOT}/bin/
install -d -o root -g root -m 755 ${INSTALL_ROOT}/usr/share/man/man1
install -c -o root -g root -m 444 mksh.1.gz ${INSTALL_ROOT}/usr/share/man/man1/

# If that's not okay, place it in /usr/share/examples/mksh/dot.mkshrc or so.
# But why shouldn't it be okay, since bash places its files there as well.
if install_config_file dot.mkshrc $INSTALL_ROOT/etc/skel/.mkshrc; then
	chmod 0644 $INSTALL_ROOT/etc/skel/.mkshrc
fi
