depends  openssl  &&
depends  libx11   &&

if list_find $RDESKTOP_SOUND alsa; then
  depends  alsa-lib
elif list_find $RDESKTOP_SOUND libao; then
  depends  libao
fi &&

optional_depends libgssglue \
                 "--enable-credssp" \
                 "--disable-credssp" \
                 "for CredSSP support" &&

optional_depends pcsc-lite \
                 "--enable-smartcard" \
                 "--disable-smartcard" \
                 "for SmartCard support"

