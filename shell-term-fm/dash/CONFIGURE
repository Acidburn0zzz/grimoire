config_query_option DASH_OPTS "Build statically linked binary?" n \
                              "--enable-static" \
                              "--disable-static" &&

config_query_option DASH_OPTS "Use fnmatch(3) from libc?" n \
                              "--enable-fnmatch" \
                              "--disable-fnmatch" &&

config_query_option DASH_OPTS "Enable LINENO support?" y \
                              "--enable-lineno" \
                              "--disable-lineno"
