default_pre_build      &&
cd  $SOURCE_DIRECTORY  &&

if [[ "$BUSYBOX_UNSTABLE" = 'y' ]]; then
  patch -p0 < ${SCRIPT_DIRECTORY}/applets.dev.patch
else
  patch -p0 < ${SCRIPT_DIRECTORY}/applets.patch
fi  &&

if  [  -f  $CONFIG_CACHE/busybox.config  ];  then
  cp  ${CONFIG_CACHE}/busybox.config  .config
else
  cp  ${SCRIPT_DIRECTORY}/busybox.config  .config  
fi  &&

if [[  "$BB_CONFIG"  =  "y" ]] && [[ $RECONFIGURE ]] ;  then
  VOYEUR="on"         &&
  make  "menuconfig"
fi  &&

if  [  "$BB_RESCUE"  =  "y"  ] ; then
	patch -p1 -F 5 < ${SCRIPT_DIRECTORY}/bb.patch
fi &&

  
cp  .config  ${CONFIG_CACHE}/busybox.config
