depends  ncurses  &&
if [ "$MC_GLIB" == "glib" ]; then
 depends glib
fi                                  &&
if [ "$MC_GLIB" == "glib2" ]
then
  depends  glib2
fi                                  &&
optional_depends gpm      "--with-gpm-mouse"    \
                          "--without-gpm-mouse" \
                          "gpm mouse support"   &&
optional_depends xorg-libs "--with-x" "--without-x" "for X11 Support"
