# 2006-05-19
# GNUTLS_OLD -> GNUTLS_BRANCH

if [ "$GNUTLS_OLD" == "y" ]; then
  GNUTLS_BRANCH="1.0"
fi

if [ "$GNUTLS_OLD" == "n" ]; then
  GNUTLS_BRANCH="DEFAULT"
fi
###


