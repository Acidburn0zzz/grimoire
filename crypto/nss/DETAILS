            SPELL=nss
          VERSION=3.11.4
           SOURCE=$SPELL-$VERSION.tar.gz
 SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
    SOURCE_URL[0]=http://ftp.mozilla.org/pub/mozilla.org/security/nss/releases/NSS_3_11_4_RTM/src/$SOURCE
         WEB_SITE=http://www.mozilla.org/projects/security/pki/nss/
          ENTERED=20030919
      SOURCE_HASH=sha512:7d20a65471c22604c96d599fe0646d35e383cafad066810e74e4e15f57d869c7e030ce8f1fbdf8bfe4ed03df459f878d5ef165f5586982f84ee11f948780fe55
       LICENSE[0]=MPL
       LICENSE[1]=GPL
       LICENSE[2]=LGPL
       PATCHLEVEL=0
      GATHER_DOCS=off
         KEYWORDS="security crypto"
            SHORT='Network Security Services (NSS)'
cat << EOF
Network Security Services (NSS) is a set of libraries designed to support
cross-platform development of security-enabled client and server applications.
Applications built with NSS can support SSL v2 and v3, TLS, PKCS #5, PKCS #7,
PKCS #11, PKCS #12, S/MIME, X.509 v3 certificates, and other security
standards.
EOF
