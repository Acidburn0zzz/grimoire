depends pkgconfig &&
optional_depends gtk+                       \
                 ""                         \
                 "--disable-pinentry-gtk"   \
                 "to build GTK+ pinentry"   &&

optional_depends gtk+2                      \
                 ""                         \
                 "--disable-pinentry-gtk2"  \
                 "to build GTK+2 pinentry"  &&

optional_depends qt4                                                         \
                 "--enable-pinentry-qt4"  \
                 "--disable-pinentry-qt4"                                    \
                 "to build Qt4 pinentry"
