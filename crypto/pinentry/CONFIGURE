config_query_option  PINENTRY_CURSES  "Build Curses pinentry and fallback to Curses?"  y  \
                     "--enable-pinentry-curses --enable-fallback-curses"                  \
                     "--disable-pinentry-curses --disable-fallback-curses" &&
config_query_option  PINENTRY_TTY  "Build tty pinentry?"  y  \
                     "--enable-pinentry-tty"                 \
                     "--disable-pinentry-tty"
