           SPELL=xca
         VERSION=0.6.0
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=$SOURCEFORGE_URL/xca/$SOURCE
     SOURCE_HASH=sha512:2a4b528ee5d7ca3c436daeafac94bf28a353ccfe36acf5e0c86e29fab7afbf425642d1f7ac2a96dd53cc97e51579d35fcdd337c6d61cf2eec9e76f2bcbdaa525
