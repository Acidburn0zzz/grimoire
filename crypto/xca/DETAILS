   SOURCE_URL[0]=$SOURCEFORGE_URL/xca/$SOURCE
     SOURCE_HASH=sha512:2b8b2f6d704b6a9ce3230970f5f734b035bb00215411ae09783b313910dabe75e7675cf9738b084b2a795c0daa092e95246583d53e66e56e505f635b9d1f16a4
