   SOURCE_URL[0]=$SOURCEFORGE_URL/xca/$SOURCE
     SOURCE_HASH=sha512:9d25c13ee6b6bde6142b144260208416fea4dd0d1b2f8699dee76f9b32468e402b14f45b61c7fdc6d86fc9b2c03fc38b6fb020973970b7ac9f547366e465e34a
