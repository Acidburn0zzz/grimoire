default_pre_build                                         &&
cd $SOURCE_DIRECTORY                                      &&
patch  -p1 < $SPELL_DIRECTORY/gcc.diff                    &&
#
# Fix for installing to /usr/lib64 on 64bit arch
#
for i in . c++ c++/provider java
do
  sed -i 's:lib@LIBALT@:lib:g' $SOURCE_DIRECTORY/$i/Makefile.in
done
