OPTS="$XTERM_OPTS $OPTS"
# group used for xterm
#create_group utmp                                             &&

OPTS="${OPTS} ${XTERM_ICON}"                                  &&
OPTS="${OPTS} ${XTERM_ANSI}"                                  &&
OPTS="${OPTS} ${XTERM_16COLOR}"                               &&
OPTS="${OPTS} ${XTERM_256COLOR}"                              &&
OPTS="${OPTS} ${XTERM_88COLOR}"                               &&
OPTS="${OPTS} ${XTERM_BLINK}"                                 &&
OPTS="${OPTS} ${XTERM_C1PRINT}"                               &&
OPTS="${OPTS} ${XTERM_BOLD}"                                  &&
OPTS="${OPTS} ${XTERM_CCLASS}"                                &&
OPTS="${OPTS} ${XTERM_CMODE}"                                 &&
OPTS="$OPTS --x-includes=/usr/include"                        &&
OPTS="$OPTS --x-libraries=/usr/lib"                           &&
OPTS="$OPTS --with-app-defaults=/usr/share/X11/app-defaults"  &&
OPTS="$OPTS --with-utmp-setgid=utmp"                          &&

default_build

