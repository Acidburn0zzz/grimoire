. $GRIMOIRE/libcompat  &&
if list_find "$GCC_COMPILER" "java" ; then
  if [[ $GCJ_AWT == y ]]; then
    depends  gtk+2 '--enable-java-awt=gtk'  &&
    depends  libart_lgpl                    &&
    depends  libxtst
  fi
fi &&
depends  diffutils       &&
depends  gmp             &&
depends  gnupg           &&
depends  mpfr            &&

if  [[ "$(installed_version mpfr|sed 's:\.::g')" < 230 ]]
then
  force_depends  mpfr
fi  &&

depends  smgl-fhs        &&
depends  smgl-archspecs
