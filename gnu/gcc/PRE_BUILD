#  fi
  #
  # End Ada bootstrap cache code
  #
fi  &&
if list_find "$GCC_COMPILER" "java" ; then
  cd $BUILD_DIRECTORY  &&
  unpack_file 9  &&
  verify_file 14  &&

  cp -v $SOURCE_CACHE/$SOURCE14 $SOURCE_DIRECTORY/ecj.jar
fi  &&
if list_find "$GCC_COMPILER" "fortran" ; then
  cd $BUILD_DIRECTORY  &&
  unpack_file 11
fi  &&
if list_find "$GCC_COMPILER" "go" ; then
  cd $BUILD_DIRECTORY  &&
  unpack_file 16
fi  &&

