  cd $BUILD_DIRECTORY  &&
  unpack_file 5
fi  &&
if list_find "$GCC_COMPILER" "ada" ; then
  cd $BUILD_DIRECTORY  &&
  unpack_file 7
  cd $SOURCE_DIRECTORY  &&

  mkdir ${SOURCE13/.tar.bz2}  &&
  cd ${SOURCE13/.tar.bz2}  &&
  unpack_file 13  &&

  #
  # This section is used to build a gnat bootstrap cache
