#
#  Bug #10647, also fixed in devel Sorcery
#
cd  $SOURCE_DIRECTORY.install  &&
local libdir=lib
[[ -d usr/lib64 ]] && libdir=lib64

for file in usr/bin \
            usr/lib/gcc-lib \
            usr/include \
            usr/libexec/gcc \
            usr/$libdir/libstdc++.so.5 \
            usr/$libdir/libstdc++.so.5.0.7 \
            usr/share/info \
            usr/share/man 
do
	local dir=$(dirname $file)
	local dest=$file
	[[ -e /$dir ]] || mkdir -p /$dir
	[[ -d /$file ]] && dest=$dir
	cp -va $file /$dest
done
