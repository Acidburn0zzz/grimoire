depends gstreamer &&
depends libnice &&

optional_depends python \
                 "--enable-python" \
                 "--disable-python" \
                 "for Python bindings" &&

if is_depends_enabled $SPELL python; then
  depends pygobject &&
  depends gst-python
fi &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to build documentation"
