depends libosip2   &&
  case $EXO_RTP in
    ccrtp)
      depends ccrtp "--enable-ucl"
      ;;

    ortp) 
      depends ortp  "--enable-ortp"
      ;;

    none)
      ;;

    ccrtp | ortp)
      optional_depends glib2   --enable-glib     --disable-glib    "compile josua with glib" n &&
      optional_depends ncurses --enable-ncurses  --disable-ncurses "ncurses support"         n
      ;;

  esac  

