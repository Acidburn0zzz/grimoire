optional_depends  "speex"                                           \
                  "--with-speex"                                    \
                  "--without-speex"                                 \
                  "support for the speex codec"                    &&

optional_depends  "libogg"                                          \
                  "--with-ogg"                                      \
                  "--without-ogg"                                   \
                  "support for the ogg container format"           &&

optional_depends  "libvorbis"                                       \
                  "--with-vorbis"                                   \
                  "--without-vorbis"                                \
                  "support for the ogg-vorbis codec"               &&


