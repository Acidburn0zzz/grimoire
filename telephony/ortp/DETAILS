   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
        WEB_SITE=http://www.linphone.org/ortp/
   SOURCE_URL[0]=http://download.savannah.nongnu.org/releases/linphone/ortp/sources/$SOURCE
