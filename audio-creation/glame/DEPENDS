                  "--with-libxml2"       \
                  "--without-libxml2"    \
                  "for XML 2.0 support"  &&

optional_depends  libgnomeui                        \
                  "--enable-gui"                    \
                  "--disable-gui"                   \
                  "for a graphical user interface"  &&

optional_depends  audiofile                           \
                  "--with-audiofile"                  \
                  "--without-audiofile"               \
                  "support full-feature I/O to file"  &&

optional_depends  alsa-lib                                \
                  "--with-alsa-lib"                       \
                  "--without-alsa-lib"                    \
                  "support full-feature I/O to hardware"  &&

optional_depends  esound             \
                  "--with-esd"       \
                  "--without-esd"    \
                  "for ESD support"  &&

