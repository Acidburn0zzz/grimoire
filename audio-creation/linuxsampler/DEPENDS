depends  g++        &&
depends  libtool    &&
depends  pkgconfig  &&
depends  libgig     &&
depends  alsa-lib   &&

#
# The --enable flags seem to bork ./configure
#
optional_depends  JACK-DRIVER               \
                  ""                        \
                  "--disable-jack-driver"   \
                  "for JACK audio support"  &&
optional_depends  arts                      \
                  ""                        \
                  "--disable-arts-driver"   \
                  "for aRts audio support"  &&

optional_depends  doxygen  \
                  ""       \
                  ""       \
                  "to build API documentation"
