cd $SOURCE_DIRECTORY                                                     &&
mkdir -vp $INSTALL_ROOT/lib/modules/$(uname -r)/kernel/drivers/char/drm  &&

if [[ "`uname -r | cut -c-3`" == "2.6" ]]; then
  cp -v $SOURCE_DIRECTORY/linux-core/*.ko                                \
  $INSTALL_ROOT/lib/modules/$(uname -r)/kernel/drivers/char/drm/
else
  cp -v $SOURCE_DIRECTORY/linux-core/*.o                                 \
  $INSTALL_ROOT/lib/modules/$(uname -r)/kernel/drivers/char/drm/
fi
