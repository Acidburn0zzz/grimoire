cd $SOURCE_DIRECTORY                                                     &&
mkdir -vp $INSTALL_ROOT/lib/modules/2.6.31/kernel/drivers/char/drm  &&

if [[ "$(get_kernel_version | cut -c-3)" == "2.6" ]]; then
  cp -v $SOURCE_DIRECTORY/linux-core/*.ko                                \
  $INSTALL_ROOT/lib/modules/2.6.31/kernel/drivers/char/drm/
else
  cp -v $SOURCE_DIRECTORY/linux-core/*.o                                 \
  $INSTALL_ROOT/lib/modules/2.6.31/kernel/drivers/char/drm/
fi
