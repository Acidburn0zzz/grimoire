. $GRIMOIRE/config_query_multi.function  &&
config_query_multi DRM_DRIVERS "What drivers do you want"  \
                                all                        \
                                i810                       \
                                i830                       \
                                i915                       \
                                mach64                     \
                                mga                        \
                                nv                         \
                                r128                       \
                                radeon                     \
                                savage                     \
                                sis                        \
                                tdfx                       \
                                via                        &&
if list_find "$DRM_DRIVERS" all
then
  DRM_DRIVERS="i810 i830 i915 mach64 mga nv r128 radeon savage sis tdfx via"
fi
