depends python3 &&
# This is needed for lirc-setup and the hwdb. We just hope
# you built pyyaml for python3.
depends pyyaml &&
depends which &&
optional_depends X11-LIBS --with-x --without-x "GUI tools" &&
optional_depends SYSTEM-LOGGER '--with-syslog' '--without-syslog' \
                               'for syslog support'
