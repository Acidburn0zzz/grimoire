# install kernel modules
local kinstalldir="${INSTALL_ROOT}/lib/modules/$(get_kernel_version)/kernel/drivers/kvm"
mkdir -p "$kinstalldir" &&
for kmod in kernel/*.ko
do
  install -v -o root -g root -m 644 $kmod $kinstalldir
done &&
depmod -a $(get_kernel_version) &&
make install-rpm DESTDIR=${INSTALL_ROOT}
