      PATCHLEVEL=1
          SOURCE=$SPELL.$VERSION.tgz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL.$VERSION
   SOURCE_URL[0]=ftp://sources.redhat.com/pub/dm/$SOURCE
        WEB_SITE=http://sources.redhat.com/dm/
         ENTERED=20031210
