           SPELL=device-mapper

if [ "$DEVICE_MAPPER_DEVEL" == "y" ];then
         VERSION=1.02.08
     SOURCE_HASH=sha512:d95ba37215b9a2dec615930a2595990a3d43db19fe39c12c790c28f09af9b4973fae199f8107fbff8a948b95dafcac2b2a161e0be320a905da2cdaa70d46145b
