# 2006-09-27
# DEVICE_MAPPER_DEVEL -> DEVICE_MAPPER_BRANCH

if [ "$DEVICE_MAPPER_DEVEL" == "y" ]; then
  persistent_add  DEVICE_MAPPER_BRANCH  &&
  DEVICE_MAPPER_BRANCH="DEFAULT"        &&
  persistent_remove DEVICE_MAPPER_DEVEL
fi

if [ "$DEVICE_MAPPER_DEVEL" == "n" ]; then
  persistent_add  DEVICE_MAPPER_BRANCH  &&
  DEVICE_MAPPER_BRANCH="1.01"           &&
  persistent_remove DEVICE_MAPPER_DEVEL
fi

config_query_list DEVICE_MAPPER_BRANCH "Which branch of device-mapper do you want to build?" DEFAULT 1.01 1.02
