depends gnupg &&
depends smgl-fhs &&

optional_depends acl \
                 "enable-acl" \
                 "--disable-acl" \
                 "for Access Control Lists support" &&

optional_depends attr \
                 "--with-xattrs" \
                 "--without-xattrs" \
                 "use extended attributes" &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends LZMA "" "" "for LZMA support"
