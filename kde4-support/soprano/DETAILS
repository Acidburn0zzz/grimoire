          SOURCE=$SPELL-svn.tar.bz2
   SOURCE_URL[0]=svn://anonsvn.kde.org/home/kde/trunk/kdesupport/$SPELL:$SPELL
else
 if [[ $SOP_VER = unstable ]];then
         VERSION=2.2.67
            KVER=4.2.90
     SOURCE_HASH=sha512:7b2d928a2c75a8668330cfc23694214da4542cb015fa20f8f013d879da9da5edc639224b5fbf07caa7611512da7283ddaf853f536d9afac14e739880d57cd673
