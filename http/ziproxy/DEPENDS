depends zlib &&
depends giflib &&
depends JPEG &&
depends libpng &&

optional_depends jasper \
                 "--with-jasper" \
                 "--without-jasper" \
                 "for JPEG 2000 support" &&

optional_depends LIBSASL \
                 "--with-sasl2" \
                 "--without-sasl2" \
                 "for SASL support"
