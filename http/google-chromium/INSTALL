mkdir -p $CHROMIUM_HOME &&
install -m 0755 out/Release/chrome $CHROMIUM_HOME/chrome &&
install -m 4755 out/Release/chrome_sandbox $CHROMIUM_HOME/chrome_sandbox &&
install -m 0755 out/Release/xdg-settings $CHROMIUM_HOME/xdg-settings &&
install -m 0644 out/Release/chrome.pak $CHROMIUM_HOME/chrome.pak &&
cp -arv out/Release/{locales,resources} $CHROMIUM_HOME &&
install -m 0644 out/Release/chrome.1 \
  $INSTALL_ROOT/usr/share/man/man1/chrome.1 &&

if list_find "$LIBAVCODEC" '-Duse_system_ffmpeg=1'
then
  for lib in avcodec avformat avutil
  do
    ln -s $TRACK_ROOT/usr/lib/lib$lib.so $CHROMIUM_HOME
  done
fi &&

if [[ -d $INSTALL_ROOT/usr/lib/xulrunner/plugins ]]
then
  ln -s $TRACK_ROOT/usr/lib/xulrunner/plugins $CHROMIUM_HOME/
fi &&

install -m 0755 $SCRIPT_DIRECTORY/chromium-launcher.sh \
  /usr/bin/google-chromium &&
install -m 0644 out/Release/product_logo_48.png \
  $INSTALL_ROOT/usr/share/pixmaps/chromium-browser.png
