depends  apr      &&
depends  apr-util &&

if echo "$OPTS" | grep -Eq "enable-(authnz-)?ldap"; then
  depends -sub LDAP apr-util
fi &&

optional_depends  openssl                \
                  '--enable-ssl'         \
                  '--disable-ssl'        \
                  'for SSL/TLS support'  &&

optional_depends  'pcre'                                                   \
                  '--with-pcre'                                            \
                  ''                                                       \
                  'for system Perl Compatible Regular Expression Library'
