           SPELL=midori
if [[ $MIDORI_VCS == y ]]; then
  if [[ $MIDOTRI_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=git://git.xfce.org/kalikiana/midori.git:$SPELL
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
else
         VERSION=0.1.5
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=http://goodies.xfce.org/releases/$SPELL/$SOURCE
     SOURCE_HASH=sha512:324b0c1af646452083bf8aee189f07c09a304e524236c5cd5a497d94bf3649aeb78746fd47bb499d835e38f4c6ec2283d88f3a416bd0723321d1a958f8c4d79c
