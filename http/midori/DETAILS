  if [[ $MIDOTRI_VCS_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=git://git.xfce.org/kalikiana/midori.git:$SPELL
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
