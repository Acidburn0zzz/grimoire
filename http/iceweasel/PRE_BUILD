default_pre_build        &&

# remove /root/.mozconfig, it causes too much trouble
if  [  -f  /root/.mozconfig  ];  then
  rm  -f  /root/.mozconfig
fi  &&

# remove broken .mozconfig shipped with 1.0b
rm  -f  $SOURCE_DIRECTORY/.mozconfig  &&

cd  $SOURCE_DIRECTORY  &&
patch -p1 < $SCRIPT_DIRECTORY/cairo-fixes.patch
