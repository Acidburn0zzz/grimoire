          SOURCE=$SPELL-$VERSION.source.tar.bz2
     SOURCE_HASH=sha512:e30fc7b0ded82835d8a4bfd02798db7cb842083592683f8f12bf747558161f1eeff571c4c275b223bebce3577c037d75c373f08692660b4931206d7bc52f2c5e
