mk_source_dir  $SOURCE_DIRECTORY  &&
cd  $SOURCE_DIRECTORY             &&
unpack_file  ''                   &&
cd  mozilla-2.0                   &&

patch -p0 < $SCRIPT_DIRECTORY/firefox-xulrunner.patch &&

if [[ "$FIREFOX_CVS" == "n" ]]; then
    cp -v $SPELL_DIRECTORY/mozconfig3 .mozconfig
else
    cp -v $SPELL_DIRECTORY/mozconfig4 .mozconfig
fi

