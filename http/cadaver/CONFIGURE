config_query_list CADAVER_THREADS "Specify multithreading API:" \
                                  none \
                                  posix \
                                  pth &&

config_query_option CADAVER_OPTS "Enable runtime debugging messages?" n \
                                 "--enable-debugging" \
                                 "--disable-debugging" &&

config_query_option CADAVER_OPTS "Enable .netrc support?" y \
                                 "--enable-netrc" \
                                 "--disable-netrc"
