depends libxml2 &&
depends APACHE2 &&
case $(get_spell_provider $SPELL APACHE2) in
  apache22) sub_depends apache22 UNIQ ;;
   apache2) sub_depends apache2  UNIQ ;;
         *) ;; # NOTHING
esac &&
optional_depends lua "" "" "to use the new Lua engine"
