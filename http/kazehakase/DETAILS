           SPELL=kazehakase
if [[ "${KZ_SCM}" == "y" ]]
then
  if [[ "${KZ_SCM_AUTOUPDATE}" == "y" ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE=${SPELL}-svn.tar.bz2
  FORCE_DOWNLOAD=ON
   SOURCE_URL[0]=svn_http://svn.sourceforge.jp/svnroot/kazehakase/kazehakase/trunk:kazehakase-svn
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-svn
else
         VERSION=0.4.5
          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/24791/${SOURCE}
     SOURCE_HASH=sha512:5132e63db187604533a5c759591b11f0091dac2f7619c99b5f6ee3b828c15b065825a4ddd1c5109f91a6dc049efe8202e25065b622f435f3bdd0ffa43b6178ce:$UPSTREAM_HASH
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
