          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/22447/${SOURCE}
     SOURCE_HASH=sha512:c703061d3747c118757b7bec5d02435b989be3c586629523325bd5968b8ebe0cb97f014e4ee12d4920edc400e8d8c47e0d8abe310f9b28ed0688c68278332320:$UPSTREAM_HASH
