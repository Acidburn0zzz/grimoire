           SPELL=kazehakase
if [[ "${KZ_SCM}" == "y" ]]
then
  if [[ "${KZ_SCM_AUTOUPDATE}" == "y" ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE=${SPELL}-svn.tar.bz2
  FORCE_DOWNLOAD=ON
   SOURCE_URL[0]=svn_http://svn.sourceforge.jp/svnroot/kazehakase/kazehakase/trunk:kazehakase-svn
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-svn
else
         VERSION=0.5.4
          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/30219/${SOURCE}
     SOURCE_HASH=sha512:6866810157433228690fda33f09af455e4451cafd257dc6777ad104c0e6303e0d2f10f6d79a15357718bfe767bfc60877bf360719cf170cf81b98d67cdfce6b4
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
