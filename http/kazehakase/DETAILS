           SPELL=kazehakase
if [[ "${KZ_SCM}" == "y" ]]
then
  if [[ "${KZ_SCM_AUTOUPDATE}" == "y" ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE=${SPELL}-svn.tar.bz2
  FORCE_DOWNLOAD=ON
   SOURCE_URL[0]=svn_http://svn.sourceforge.jp/svnroot/kazehakase/kazehakase/trunk:kazehakase-svn
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-svn
else
         VERSION=0.4.9
          SOURCE=${SPELL}-${VERSION}.tar.gz
   SOURCE_URL[0]=http://osdn.dl.sourceforge.jp/kazehakase/27353/${SOURCE}
     SOURCE_HASH=sha512:e7e6b8e2ade86243b238648ad1c03b9a79b659e2425d17ce676b7bfe0c79edc4bb3a5cd267710a224b612537bdc0c74145f024c872cb5a835f6f9c21e6895201
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
