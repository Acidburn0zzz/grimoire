depends g++ &&
depends autoconf &&
depends automake &&
depends libtool &&
depends gtk+2 &&
depends icu &&
depends gperf &&
depends libpng &&
depends jpeg &&
depends bison &&
depends flex &&
depends sqlite &&
depends libxslt &&

if [[ $WEBKIT_FONT_BE == freetype2 ]]; then
  depends freetype2
else
  depends pango "--with-font-backend=pango"
fi &&

if [[ $WEBKIT_HTTP_BE == curl ]]; then
  depends curl
else
  depends libsoup "--with-http-backend=soup"
fi
