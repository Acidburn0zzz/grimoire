depends g++ &&
depends autoconf &&
depends automake &&
depends libtool &&
depends gtk+2 &&
depends icu &&
depends gperf &&
depends libpng &&
depends jpeg &&
depends bison &&
depends flex &&
depends sqlite &&
depends libsoup &&
depends enchant &&

optional_depends cairo '--enable-svg' \
                       '--disable-svg' \
                       'Enable SVG support?'

optional_depends libxslt '--enable-xslt' \
                         '--disable-xslt' \
                         'for XSLT support' &&

optional_depends gtk-doc '--enable-gtk-doc' \
                         '--disable-gtk-doc' \
                         'for documentation generation' &&

if [[ $WEBKIT_FONT_BE == freetype2 ]]; then
  depends freetype2
else
  depends pango "--with-font-backend=pango"
fi &&

optional_depends gst-plugins-base  \
                 "--enable-video" \
                 "--disable-video" \
                 "for HTML5 streaming video support"
