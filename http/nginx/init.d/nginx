#!/bin/bash

PIDFILE=/var/run/nginx.pid
PROGRAM=/usr/sbin/nginx
ARGS="-c /etc/nginx/nginx.conf"
RUNLEVEL=3
NEEDS="+network +remote_fs"

reload() {
  echo "Gracefully reloading Nginx web server..."

  if [[ `nginx -v 2>&1 | cut -d. -f2` == 6 ]]; then
    kill -HUP "$PIDFILE"
  else
    $PROGRAM -s reload
  fi
  evaluate_retval
}

. /etc/init.d/smgl_init
