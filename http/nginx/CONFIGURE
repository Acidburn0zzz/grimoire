. "$GRIMOIRE/FUNCTIONS" &&

if is_version_less $VERSION 1.1; then
  config_query NGINX_SYSLOG "Build with syslog support?" n
else
  persistent_add NGINX_SYSLOG &&
  local NGINX_SYSLOG="n"
fi &&

config_query_option NGINX_OPTS "Build with mail support?" n \
                               "--with-mail" ""
