   SOURCE_URL[0]=http://sysoev.ru/$SPELL/$SOURCE
     SOURCE_HASH=sha512:58f5dc01002e4460e4b72b548ada742455fd5bd11d159d4f4f51606f9b060f2e13a0422d07b459beee30dff3fdb7efbba309f7d2a21ac2a862e9b69bc8bc0422
