   SOURCE_URL[0]=http://sysoev.ru/$SPELL/$SOURCE
     SOURCE_HASH=sha512:45d0cfa80ece5c9d256e1fd8aacc6c6b3434d2b15a2a4dac501cc0b9343a7e43ffdaad2fa30c6c016edd02f62aa983ccbed0d718fa29277632839d26c942a522
