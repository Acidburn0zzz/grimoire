depends glib2 &&

optional_depends -sub GUDEV UDEV \
                 "--enable-gudev" \
                 "--disable-gudev" \
                 "for GUDEV support" &&

optional_depends policykit \
                 "--enable-polkit" \
                 "--disable-polkit" \
                 "for policykit support" &&

optional_depends sane-backends \
                 "--enable-sane" \
                 "--disable-sane" \
                 "for scanner support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to build documentation"
