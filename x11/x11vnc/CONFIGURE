                    "Enable libcrypt support?" y \
                    "--with-crypt" \
                    "--without-crypt" &&

config_query_option X11VNC_OPTS \
                    "Enable xkeyboard extension support?" y \
                    "--with-xkeyboard" \
                    "--without-xkeyboard"
