   SOURCE_URL[0]=ftp://ftp.ibiblio.org/pub/Linux/X11/screensavers/$SOURCE
     SOURCE_HASH=sha512:96eef66ec1b407ef174f1ccaf9cdeee0745bc99d395fdd53ea77fb76b123c9a578b4ad28c6fa27812c9f66b93345acb2292d4599d7778733cd9e4aefd9bf772a
