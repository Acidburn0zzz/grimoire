depends  gnutls  &&

optional_depends  python                \
                  '--with-python'       \
                  '--without-python'    \
                  'for Python support'  &&

optional_depends  NS-PLUGIN-COMPATIBLE      \
                  '--enable-plugin=yes'     \
                  '--enable-plugin=no'      \
                  'for web browser plugin'  &&

optional_depends  LIBSASL                   \
                  '--with-sasl'             \
                  '--without-sasl'          \
                  'for SASL authentication support'
