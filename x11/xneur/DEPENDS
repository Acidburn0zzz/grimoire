depends  xorg-libs  &&

if list_find "$XNEUR_SOUND" "gstreamer" | list_find "$XNEUR_SOUND" "openal"; then
  depends $XNEUR_SOUND "--with-sound=$XNEUR_SOUND"
elif list_find "$XNEUR_SOUND" "aplay"; then
  depends alsa-utils "--with-sound=$XNEUR_SOUND"
fi  &&

case $XNEUR_IMAGE in
  imlib2) depends $XNEUR_IMAGE "--with-image=$XNEUR_IMAGE" ;;
  xpm) depends libxpm "--with-image=$XNEUR_IMAGE" ;;
  *) true ;;
esac  &&

optional_depends  aspell                \
                  "--with-aspell"       \
                  "--without-aspell"    \
                  "for aspell support"  &&

optional_depends  pcre                               \
                  "--with-pcre"                      \
                  "--without-pcre"                   \
                  "for regular expressions support"  &&

optional_depends  xosd                     \
                  "--with-xosd=yes"        \
                  "--with-xosd=no"         \
                  "for OSD notifications"
