                  "--with-gstreamer"            \
                  "--without-gstreamer"         \
                  "for Gstreamer sound engine"  &&

optional_depends  openal                     \
                  "--with-openal"            \
                  "--without-openal"         \
                  "for OpenAL sound engine"  &&

optional_depends  pcre                               \
                  "--with-pcre"                      \
                  "--without-pcre"                   \
                  "for regular expressions support"
