default_pre_build &&
cd "$SOURCE_DIRECTORY" &&

sed -i -e "s:^CXXFLAGS=\(.*\):CXXFLAGS=\1 ${CXXFLAGS}:" \
    -e "s:^CFLAGS=\(.*\):CFLAGS=\1 ${CFLAGS}:" \
    -e "s:^MANDIR=.*:MANDIR=${INSTALL_ROOT}/usr/share/man:" \
    -e "s:/usr/X11R6:${INSTALL_ROOT}/usr:" \
    Makefile &&

sed -i "s:X11R6\/::g" "$SOURCE_DIRECTORY/slim.conf" &&

patch -p0 < "$SPELL_DIRECTORY/gcc43.patch" &&
patch -p0 < "$SPELL_DIRECTORY/gcc44.patch"
