   SOURCE_URL[0]=http://www.nickg.me.uk/files/$SOURCE
     SOURCE_HASH=sha512:f3b322ded52ba52487a9edf94862abfb9ec82d79ccf74bb75c6a0e219b89bfb504ac18f105e950d94212348b39bb86ebf0b297699850e02525ac6a938517289e
