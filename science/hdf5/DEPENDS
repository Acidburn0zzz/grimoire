depends zlib &&
optional_depends -sub FORTRAN gcc \
                 "--enable-fortran" \
                 "--disable-fortran" \
                 "Fortran wrapper library for HDF5 access" &&
optional_depends -sub CXX gcc \
                 "--enable-cxx" \
                 "--disable-cxx" \
                 "C++ wrapper library for HDF5 access" 
