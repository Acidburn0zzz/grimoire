depends cmake &&
depends qt4   &&
depends gdal  &&
depends proj  &&
optional_depends libexif \
                 "-DWITH_EXIF=on" \
                 "-DWITH_EXIF=off" \
                 "to create wayoints from geotagged images" &&
optional_depends libdmtx \
                 "-DWITH_DMTX=on" \
                 "-DWITH_DMTX=off" \
                 "to summarize waypoints as  2D barcode" &&
optional_depends log4c \
                 "-DWITH_LOG4C=on" \
                 "-DWITH_LOG4C=off" \
                 "support for logging" &&
optional_depends OPENGL \
                 "-DWITH_OPENGL=on" \
                 "-DWITH_OPENGL=off" \
                 "3D support" &&
optional_depends gpsd \
                 "-DWITH_GPSD=on" \
                 "-DWITH_GPSD=off" \
                 "to enable gpsd support"
