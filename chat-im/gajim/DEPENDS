depends pygtk2 &&
depends pysqlite &&
depends intltool &&

optional_depends dbus \
                 "--enable-remote" \
                 "--disable-remote" \
                 "for remote control via DBus" &&

optional_depends gtkspell \
                 "--enable-gtkspell" \
                 "--disable-gtkspell" \
                 "for spell checking" &&

optional_depends dbus-python "" "" "for nice popup windows" &&

optional_depends libxscrnsaver \
                 "--enable-idle" \
                 "--disable-idle" \
                 "for idle module"
