         SOURCE2=$SOURCE.asc
   SOURCE_URL[0]=http://www.process-one.net/downloads/${SPELL}/${VERSION}/${SOURCE}
  SOURCE2_URL[0]=${SOURCE_URL[0]}.asc
      SOURCE_GPG=19C09311.gpg:$SOURCE2:UPSTREAM_KEY
