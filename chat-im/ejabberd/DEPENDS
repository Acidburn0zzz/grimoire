depends erlang &&

depends expat &&

optional_depends SSL \
                 "--enable-SSL" \
                 "--disable-SSL" \
                 "SSL support (recommended)" &&

optional_depends zlib \
                 "--enable-zlib" \
                 "--disable-zlib" \
                 "stream compression support" &&

optional_depends linux-pam \
                 "--enable-pam" \
                 "--disable-pam" \
                 "pam support" &&

optional_depends unixodbc \
                 "--enable-odbc" \
                 "--disable-odbc" \
                 "enable ODBC"
