depends libtool &&
depends freetype2 &&

if [[ -z $IMLIB2_X11 ]]; then
  depends libx11
  depends libxext
fi &&

optional_depends zlib                \
                 '--with-zlib'       \
                 '--without-zlib'    \
                 'BZIP2 loader'      &&

optional_depends  bzip2              \
                 '--with-bzip2'      \
                 '--without-bzip2'   \
                 'BZIP2 loade'       &&

optional_depends 'libid3tag'         \
                 '--with-id3'        \
                 '--without-id3'     \
                 'tagging support'   &&

optional_depends 'tiff'              \
                 '--with-tiff'       \
                 '--without-tiff'    \
                 'TIFF image loader' &&

optional_depends 'libpng'            \
                 '--with-png'        \
                 '--without-png'     \
                 'PNG image loader'  &&

optional_depends 'JPEG'              \
                 '--with-jpeg'       \
                 '--without-jpeg'    \
                 'JPEG image loader' &&

optional_depends 'giflib'            \
                 '--with-gif'        \
                 '--without-gif'     \
                 'GIF image loader'
