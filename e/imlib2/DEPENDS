depends libtool &&
depends zlib &&
depends freetype2 &&
depends xorg-libs &&

if [[ $IMLIB2_CVS == y ]]; then
  depends CVS &&
  depends automake-1.9
fi &&

if [[ -z $IMLIB2_X11 ]]; then
  depends xorg-libs
fi &&

optional_depends 'tiff'              \
                 '--with-tiff'       \
                 '--without-tiff'    \
                 'TIFF image loader' &&

optional_depends 'libpng'            \
                 '--with-png'        \
                 '--without-png'     \
                 'PNG image loader'  &&

optional_depends 'jpeg'              \
                 '--with-jpeg'       \
                 '--without-jpeg'    \
                 'JPEG image loader' &&

optional_depends 'giflib'            \
                 '--with-gif'        \
                 '--without-gif'     \
                 'GIF image loader'
