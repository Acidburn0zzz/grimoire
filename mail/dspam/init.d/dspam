#!/bin/bash

PROGRAM="/bin/true"
NAME="dspam"
RUNLEVEL=3
NEEDS="+remote_fs +network"
PIDFILE=/var/run/dspam.pid

. /etc/init.d/smgl_init

start()
{
  echo  "Starting dspam..."
  /usr/bin/dspam --daemon &
  ps -C dspam > /dev/null
  evaluate_retval
}

stop()
{
  echo "stopping dspam..."
  kill $(cat ${PIDFILE})
  evaluate_retval 
}
