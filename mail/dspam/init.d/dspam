#!/bin/bash

PROGRAM="/usr/bin/dspam"
ARGS="--daemon > /dev/null 2>&1 &"
RUNLEVEL=3
PIDFILE="/var/run/dspam/dspam.pid"
NEEDS="+remote_fs +network"

. /etc/init.d/smgl_init

start() {
  echo "Starting $NAME..."

  [[ -d /var/run/dspam ]] || mkdir -p /var/run/dspam
  su root -c "$PROGRAM $ARGS"
  evaluate_retval
}
