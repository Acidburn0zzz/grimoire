local spelldep &&

for spelldep in cyrus-sasl db linux-pam; do
    if is_depends_enabled $SPELL $spelldep; then
        on_cast $spelldep cast_self
    fi
done

for spelldep in mysql postgresql openssl; do
    if is_depends_enabled $SPELL $spelldep; then
        on_cast $spelldep check_self
    fi
done
