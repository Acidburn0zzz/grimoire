default_pre_build  &&
cd $SOURCE_DIRECTORY  &&
if [[ $ALPINE_CHAPPA == y ]]; then
verify_file 2 &&
cp -f $SOURCE_CACHE/$SOURCE2 . &&
gunzip -f $SOURCE2 &&
patch -p1 < ${SOURCE2/.gz}
fi &&
if [[ $ALPINE_TOPAL == y ]]; then
unpack_file 3 &&
patch -p1 < topal-$VERSION3/$SPELL-$VERSION.patch-1 &&
patch -p1 < topal-$VERSION3/$SPELL-$VERSION.patch-2
fi

