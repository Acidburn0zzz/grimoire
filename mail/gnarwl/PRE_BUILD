default_pre_build &&
cd "$SOURCE_DIRECTORY" &&

if [[ $GNARWL_TIME == y ]]; then
  patch -p0 < "$SPELL_DIRECTORY/time.patch"
fi &&

# use custom CFLAGS
sedit "s:-g -Wall -O2:$CFLAGS:" Makefile.in &&

# use custom LDFLAGS
sedit "s:^LFLAGS=\(.*\):LFLAGS=\1 $LDFLAGS:" Makefile.in &&

sedit "/data install/d" Makefile.in
