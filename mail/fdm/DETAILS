   SOURCE_URL[0]=$SOURCEFORGE_URL/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:a7e1eb0c6edb39687bb62da7f99dc4bb89aef440e0dee6fe2c327867f35f66733fc0e0d3f77390fb6e9aa382f2758b56c21d2898fe3529a7163ce7d0250196c9
