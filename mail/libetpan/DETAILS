           SPELL=libetpan
if [ "$CVS" = "y" ]; then
         VERSION=cvs
          SOURCE=$SPELL-sfcvs.tar.bz2
   SOURCE_URL[0]=cvs://:pserver:anonymous@libetpan.cvs.sourceforge.net:/cvsroot/libetpan:libetpan
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-sfcvs
else
         VERSION=0.46
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
      SOURCE_URL=$SOURCEFORGE_URL/libetpan/$SOURCE
     SOURCE_HASH=sha512:1b3abbe11d2bdbaeecc96dc58bec9c4dd60e5d2bda629dbf35c33e3d8dd268bd452f7cf0ac2cc1f7df24b71bcc95eb20b0c8f9071be5b84e667264f9beab21c1
