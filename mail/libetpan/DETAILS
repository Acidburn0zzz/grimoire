           SPELL=libetpan
if [ "$CVS" = "y" ]; then
         VERSION=cvs
          SOURCE=$SPELL-sfcvs.tar.bz2
   SOURCE_URL[0]=cvs://:pserver:anonymous@libetpan.cvs.sourceforge.net:/cvsroot/libetpan:libetpan
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-sfcvs
else
         VERSION=0.51
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
      SOURCE_URL=$SOURCEFORGE_URL/libetpan/$SOURCE
     SOURCE_HASH=sha512:5000e1e3bcba75c43788cc3b1f4c74b9370583c9d45108f1952d7db9c3b1752f5b13c507ca28411c6b6052853258df1f08ff176cf8608039970200ab1333617b
