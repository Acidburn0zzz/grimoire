           SPELL=libetpan
if [ "$CVS" = "y" ]; then
         VERSION=cvs
          SOURCE=$SPELL-sfcvs.tar.bz2
   SOURCE_URL[0]=cvs://:pserver:anonymous@libetpan.cvs.sourceforge.net:/cvsroot/libetpan:libetpan
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-sfcvs
else
         VERSION=0.49
          SOURCE=$SPELL-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
      SOURCE_URL=$SOURCEFORGE_URL/libetpan/$SOURCE
     SOURCE_HASH=sha512:eccd7c2aefd5efe0d9def5c7cd0ae0ebb9552013066401e5b739c796ab8b8ce6e55eead14915d064096f66dbbbf24ef2a4f0ce8db0d59989bc1f7378b6531bd2
