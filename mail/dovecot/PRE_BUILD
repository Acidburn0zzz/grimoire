default_pre_build                                   &&
cd $SOURCE_DIRECTORY                                &&
if [[ "$DOVECOT_EXT_LDA" == "y" ]]; then
unpack_file 3                                       &&
if [[ "$DOVECOT_MANAGESIEVE" == "y" ]]; then
verify_file 4                                       &&
zcat $SOURCE_CACHE/$SOURCE4 | patch -p1             &&
aclocal                                             &&
automake --add-missing                              &&
autoreconf
fi
fi
