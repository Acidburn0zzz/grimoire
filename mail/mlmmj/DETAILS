   SOURCE_URL[0]=http://mlmmj.mmj.dk/files/$SOURCE
     SOURCE_HASH=sha512:ba2a73a30672778e8740ab669660967d29983167373bc8864dc6a7406f5b59638da268e2ec0c6c160f88c2391095eff5cd5936f9a80d54fd31adc19be9a07ace
