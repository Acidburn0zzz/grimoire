. $GRIMOIRE/config_query_multi.function
config_query_option XORG_SERVER_OPTS                                        \
                    "Build documentation?"                                  \
                    n                                                       \
                    "--enable-builddocs"                                    \
                    "--disable-builddocs"                                   &&

config_query_option XORG_SERVER_OPTS                                        \
                    "Build SHM extension?"                                  \
                    y                                                       \
                    "--enable-shm"                                          \
                    "--disable-shm"                                         &&

