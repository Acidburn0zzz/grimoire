config_query_option  XF86_INPUT_LIBICE_UNIX_TRANSPORT  \
          'Enable UNIX domain socket transport?'       \
          y                                            \
          '--enable-unix-transport'                    \
          '--disable-unix-transport'                   &&

config_query_option  XF86_INPUT_LIBICE_TCP_TRANSPORT   \
          'Enable TCP socket transport?'               \
          y                                            \
          '--enable-tcp-transport'                     \
          '--disable-tcp-transport'                    &&

config_query_option  XF86_INPUT_LIBICE_IPV6            \
          'Enable IPv6 transport?'                     \
          y                                            \
          '--enable-IPv6'                              \
          '--disable-IPv6'
