config_query_option LIBX11_OPTS                                \
          "Enable secure rpc?"                                 \
          y                                                    \
          "--enable-secure-rpc"                                \
          "--disable-secure-rpc"                               &&

config_query_option LIBX11_OPTS                                \
          "Enable loadable i18n module support?"               \
          n                                                    \
          "--enable-loadable-i18n"                             \
          "--disable-loadable-i18n"                            &&

config_query_option LIBX11_OPTS                              \
          "Disable loadable xcursor library support"           \
          n                                                    \
          "--disable-loadable-xcursor"                         \
          "--enable-loadable-xcursor"                          &&

config_query_option LIBX11_OPTS                                \
          "Disable Xlib support for CMS *EXPERIMENTAL*?"       \
          n                                                    \
          "--disable-xcms"                                     \
          "--enable-xcms"                                      &&

config_query_option LIBX11_OPTS                              \
          "Disable Xlib locale implementation *EXPERIMENTAL*?" \
          n                                                    \
          "--disable-xlocale"                                  \
          "--enable-xlocale"                                   &&

config_query_option LIBX11_OPTS                            \
          "Enable XLOCALEDIR environment variable support?"    \
          n                                                    \
          "--enable-xlocaledir"                                \
          "--enable-xlocaledir"                                &&

config_query_option LIBX11_OPTS                                 \
          "Disable XKB support *EXPERIMENTAL*?"                \
          n                                                    \
          "--disable-xkb"                                      \
          "--enable-xkb"                                       
