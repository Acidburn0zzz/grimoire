config_query_option  XF86-INPUT-LIBSM_PIC         \
          'Try to use only PIC/non-PIC objects?'  \
          n                                       \
          '--with-pic'                            \
          '--without-pic'                         &&

config_query_option  XF86-INPUT-LIBSM_UNIX_TRANSPORT    \
          'Enable UNIX domain socket transport?'       \
          y                                            \
          '--enable-unix-transport'                    \
          '--disable-unix-transport'                   &&

config_query_option  XF86-INPUT-LIBSM_TCP_TRANSPORT     \
          'Enable TCP socket transport?'               \
          y                                            \
          '--enable-tcp-transport'                     \
          '--disable-tcp-transport'                    &&

config_query_option  XF86-INPUT-LIBSM_IPV6             \
          'Enable IPv6 transport?'                     \
          y                                            \
          '--enable-IPv6'                              \
          '--disable-IPv6'                             &&
