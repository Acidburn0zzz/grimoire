config_query_option LIBXFONT_OPTS          \
          'Enable Type1 fonts'                         \
          n                                            \
          '--enable-type1'                             \
          '--disable-type1'                            &&

config_query_option LIBXFONT_OPTS            \
          'Enable cid fonts'                           \
          y                                            \
          '--enable-cid'                               \
          '--disable-cid'                              &&

config_query_option LIBXFONT_OPTS         \
          'Enable speedo fonts'                        \
          y                                            \
          '--enable-speedo'                            \
          '--disable-speedo'                           &&

config_query_option LIBXFONT_OPTS       \
          'Enable builtin fonts'                       \
          y                                            \
          '--enable-builtins'                          \
          '--disable-builtins'                         &&

config_query_option LIBXFONT_OPTS      \
          'Enable pcf format'                          \
          y                                            \
          '--enable-pcfformat'                         \
          '--disable-pcfformat'                        &&

config_query_option LIBXFONT_OPTS      \
          'Enable bdf format'                          \
          y                                            \
          '--enable-bdfformat'                         \
          '--disable-bdfformat'                        &&

config_query_option LIBXFONT_OPTS      \
          'Enable snf format'                          \
          y                                            \
          '--enable-snfformat'                         \
          '--disable-snfformat'                        &&

config_query_option LIBXFONT_OPTS             \
          'Enable fc'                                  \
          y                                            \
          '--enable-fc'                                \
          '--disable-fc'                               &&

config_query_option LIBXFONT_OPTS   \
          'Enable UNIX domain socket transport?'       \
          y                                            \
          '--enable-unix-transport'                    \
          '--disable-unix-transport'                   &&

config_query_option LIBXFONT_OPTS     \
          'Enable TCP socket transport?'               \
          y                                            \
          '--enable-tcp-transport'                     \
          '--disable-tcp-transport'                    &&

config_query_option LIBXFONT_OPTS             \
          'Enable IPv6 transport?'                     \
          y                                            \
          '--enable-IPv6'                              \
          '--disable-IPv6'
