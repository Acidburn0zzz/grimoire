config_query_option  XF86_INPUT_LIBFONT_TYPE1          \
          'Enable Type1 fonts'                         \
          n                                            \
          '--enable-type1'                             \
          '--disable-type1'                            &&

config_query_option  XF86_INPUT_LIBFONT_CID            \
          'Enable cid fonts'                           \
          y                                            \
          '--enable-cid'                               \
          '--disable-cid'                              &&

config_query_option  XF86_INPUT_LIBFONT_SPEEDO         \
          'Enable speedo fonts'                        \
          y                                            \
          '--enable-speedo'                            \
          '--disable-speedo'                           &&

config_query_option  XF86_INPUT_LIBFONT_BUILTINS       \
          'Enable builtin fonts'                       \
          y                                            \
          '--enable-builtins'                          \
          '--disable-builtins'                         &&

config_query_option  XF86_INPUT_LIBFONT_PCFFORMAT      \
          'Enable pcf format'                          \
          y                                            \
          '--enable-pcfformat'                         \
          '--disable-pcfformat'                        &&

config_query_option  XF86_INPUT_LIBFONT_BDFFORMAT      \
          'Enable bdf format'                          \
          y                                            \
          '--enable-bdfformat'                         \
          '--disable-bdfformat'                        &&

config_query_option  XF86_INPUT_LIBFONT_SNFFORMAT      \
          'Enable snf format'                          \
          y                                            \
          '--enable-snfformat'                         \
          '--disable-snfformat'                        &&

config_query_option  XF86_INPUT_LIBFONT_FC             \
          'Enable fc'                                  \
          y                                            \
          '--enable-fc'                                \
          '--disable-fc'                               &&

config_query_option  XF86_INPUT_LIBFS_UNIX_TRANSPORT   \
          'Enable UNIX domain socket transport?'       \
          y                                            \
          '--enable-unix-transport'                    \
          '--disable-unix-transport'                   &&

config_query_option  XF86_INPUT_LIBFS_TCP_TRANSPORT     \
          'Enable TCP socket transport?'               \
          y                                            \
          '--enable-tcp-transport'                     \
          '--disable-tcp-transport'                    &&

config_query_option  XF86_INPUT_LIBFS_IPV6             \
          'Enable IPv6 transport?'                     \
          y                                            \
          '--enable-IPv6'                              \
          '--disable-IPv6'
