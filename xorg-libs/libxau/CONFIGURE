config_query_option  XF86-INPUT-LIBAU_PIC         \
          'Try to use only PIC/non-PIC objects?'  \
          n                                       \
          '--with-pic'                            \
          '--without-pic'                         &&

config_query_option  XF86-INPUT-LIBAU_XTHREADS          \
          'Disable libXau support for Multithreading?'  \
          n                                             \
          '--enable-xthreads'                           \
          '--disable-xthreads'

