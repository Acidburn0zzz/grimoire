depends  automake  &&
depends  gnupg     &&
depends  smgl-fhs  &&
depends  lzo       &&

if [[ "${GRUB2_SVN}" = 'y' ]]; then
  depends autoconf &&
  depends subversion &&
  depends RUBY
fi  &&

optional_depends  freetype2                  \
                  '--enable-grub-mkfont'     \
                  '--disable-grub-mkfont'    \
                  'for grub-mkfont utility' &&
optional_depends  sdl \
                  '--enable-grub-emu-sdl' \
                  '--disable-grub-emu-sdl' \
                  'To build and install the grub-emu debugging utility with SDL support'
