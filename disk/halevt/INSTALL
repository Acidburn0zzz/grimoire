create_account halevt &&
create_group   halevt &&
default_install       &&
mkdir -p ${INSTALL_ROOT}/usr/share/doc/${SPELL}/examples &&
cp ${SOURCE_DIRECTORY}/examples/* ${INSTALL_ROOT}/usr/share/doc/${SPELL}/examples &&
chown halevt:halevt ${INSTALL_ROOT}/var/lib/halevt &&
chown halevt:halevt ${INSTALL_ROOT}/var/run/halevt
