           SPELL=fuse
if [ "$FUSE_BRANCH" != "scm" ]; then
         VERSION=2.8.7
     SOURCE_HASH=sha512:c20fc2af3f3b19d86d68acf44e74555205ecb448a7e4d4ef4361a7520b01837ee39409400697e70b7e38cd8e6a1a24eb01f4ba4e5cb9a901dd170b52ee30a29c
          SOURCE=$SPELL-$VERSION.tar.gz
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
else
  if [ "$FUSE_AUTOUPDATE" == "y" ]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git://fuse.git.sourceforge.net/gitroot/fuse/fuse:fuse-git
  FORCE_DOWNLOAD=on
   SOURCE_IGNORE=volatile
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-git
fi
