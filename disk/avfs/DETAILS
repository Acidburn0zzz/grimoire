   SOURCE_URL[0]=$SOURCEFORGE_URL/avf/$SOURCE
     SOURCE_HASH=sha512:0e788f60a4c74e3d272ae99181e05058115f4f76e99af8818aba9be4b9b26027c7876f0f6a1c732050d1844cbc3bb90526beb44aa4017a91f621b283740e2594
