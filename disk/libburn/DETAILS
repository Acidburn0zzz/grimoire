           SPELL=libburn
if [[ $LIBBURN_SVN == y ]]; then
  if [[ $LIBBURN_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE=$SPELL-svn.tar.bz2
  FORCE_DOWNLOAD=on
