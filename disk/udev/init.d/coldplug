#!/bin/bash

PROGRAM=/bin/false
RUNLEVEL=DEV
ESSENTIAL=yes
NEEDS="udevd"

# source function library
. /etc/init.d/smgl_init

start() 
{
  echo "Triggering kernel device uevents..."
  /sbin/udevtrigger
  evaluate_retval
  echo "Waiting for all events to be handled..."
  /sbin/udevsettle --timeout=60
  evaluate_retval
}

stop() { exit 0; }
restart() { exit 3; }
reload() { exit 3; }
force_reload() { exit 3; }
status() { exit 3; }
