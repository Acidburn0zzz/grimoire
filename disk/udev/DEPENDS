depends gnupg &&
depends smgl-fhs &&

if list_find "$UDEV_OPTS" "--enable-extras"; then
  depends acl &&
  depends gperf  &&
  depends pkgconfig &&
  depends glib2     &&
  depends libusb    &&
  depends usbutils  &&
  depends hwdata    &&
  depends libxslt
fi &&

optional_depends libselinux \
                 "--with-selinux" \
                 "--without-selinux" \
                 "for SELinux support" &&

optional_depends SYSTEM-LOGGER \
                 "--enable-logging" \
                 "--disable-logging" \
                 "for logging to syslog"
