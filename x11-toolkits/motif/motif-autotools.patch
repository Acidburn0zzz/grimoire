+else
+  LIB_XP=
+  PRINTING_SUPPORTED_FALSE=
+  PRINTING_SUPPORTED_TRUE=!
+fi
+AC_SUBST(PRINTING_SUPPORTED_FALSE)
+AC_SUBST(PRINTING_SUPPORTED_TRUE)
+
+AM_CONDITIONAL(PRINTING, test "$enable_printing" = "yes")
+AC_SUBST(LIB_XP)
