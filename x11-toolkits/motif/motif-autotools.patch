+  AC_SEARCH_LIBS([iconv_open], [iconv], ,
+    AC_SEARCH_LIBS([libiconv_open], [iconv]))
+fi
+
+AC_ARG_ENABLE(printing, [  --disable-printing
+                       Disable printing support])
+
+if test x$enable_printing = x
+then
+    enable_printing="yes"
+fi
+
+if test "$enable_printing" = "yes"
