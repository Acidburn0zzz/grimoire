default_pre_build &&

# Those messy droppings of this QT4 lib are annoying!
# Trying to get things into some system-like order.

sedit "s:    QWT_INSTALL_PREFIX    = /usr/local/qwt-\$\$QWT_VERSION:    QWT_INSTALL_PREFIX    = $INSTALL_ROOT/usr:" \
	      $SOURCE_DIRECTORY/qwtconfig.pri &&

sedit "s:QWT_INSTALL_DOCS      = \$\${QWT_INSTALL_PREFIX}/doc:QWT_INSTALL_DOCS      = \$\${QWT_INSTALL_PREFIX}/share/doc/qwt:" \
	      $SOURCE_DIRECTORY/qwtconfig.pri &&

sedit "s:QWT_INSTALL_FEATURES  = \$\${QWT_INSTALL_PREFIX}/features:QWT_INSTALL_FEATURES  = \$\${QWT_INSTALL_PREFIX}/share/qt4/mkspecs/features:" \
	      $SOURCE_DIRECTORY/qwtconfig.pri
