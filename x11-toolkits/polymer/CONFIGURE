config_query_option  POLYMER_MMX                  \
                     "Enable MMX optimizations?"  \
                     n                            \
                     "--enable-mmx"               \
                     "--disable-mmx"              &&

config_query_option  POLYMER_SSE2                  \
                     "Enable SSE2 optimizations?"  \
                     n                             \
                     "--enable-sse2"               \
                     "--disable-sse2"
