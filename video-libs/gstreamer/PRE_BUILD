default_pre_build &&
cd "$SOURCE_DIRECTORY" &&

patch -p0 < "$SPELL_DIRECTORY/gstreamer-bison.patch" &&

# we don't need cvs to build this
sed -i "72d" autogen.sh &&

NOCONFIGURE=1 ./autogen.sh &&

sed -e '/which gtkdoc-rebase/ s/which/(which/' \
    -e '/gtkdoc-rebase --relative --dest-dir=/ s/ ;/) || true ;/' \
    -i docs/gst/Makefile.in -i docs/libs/Makefile.in &&

echo "mkdir -p \$1" > mkinstalldirs
