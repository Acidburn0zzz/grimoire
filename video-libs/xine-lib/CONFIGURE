config_query_option XINE_LIB_OPTS \
                    "Enable IPv6?" y \
                    "--enable-ipv6" \
                    "--disable-ipv6" &&

config_query_option XINE_LIB_OPTS \
                    "Build Video4Linux 2 input plugins?" y \
                    "--enable-v4l2" \
                    "--disable-v4l2" &&

# V4L 1 is deprecated
if list_find "$XINE_LIB_OPTS" "--enable-v4l"; then
  list_remove "XINE_LIB_OPTS" "--enable-v4l"
fi
