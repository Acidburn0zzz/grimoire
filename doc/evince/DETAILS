           SPELL=evince
         VERSION=3.8.0
          BRANCH=$(echo $VERSION | cut -d. -f1,2)
          SOURCE=$SPELL-$VERSION.tar.xz
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
   SOURCE_URL[0]=$GNOME_URL/sources/evince/$BRANCH/$SOURCE
        WEB_SITE=http://www.gnome.org/projects/evince
     SOURCE_HASH=sha512:9ed66943f86ce46787597db78d999d2857921bfadd8f0e19ddcfdfe78ae6a440da74a2405c21ec286e0f8ba84481b592943830c0260e50defe1f05e6ccaa11b7
