default_pre_build          &&
cd $SOURCE_DIRECTORY 	   &&
sed -i -e "s|/usr|$INSTALL_ROOT/usr|;s|make_docformat|build_docformat|" \
         contrib/build.pl  &&
# fix bad file
sed -i '/trace/s|e\\|e:\\|' scripts/yodl2whatever.in &&
# provide dummy directories
cd manual                  &&
for DD in txt ps html pdf dvi latex;do
mkdir $DD &&
touch $DD/dummy
done
