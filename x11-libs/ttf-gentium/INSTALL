FONT_DIR="${INSTALL_ROOT}/usr/share/fonts/TTF"                       &&
mkdir -p ${FONT_DIR}                                                 &&
install -m 644 -o root -g root ${SOURCE_DIRECTORY}/*.TTF ${FONT_DIR} &&
mkdir ${INSTALL_ROOT}/usr/share/doc/ttf-gentium                      &&
install -m 644 -o root -g root \
	${SOURCE_DIRECTORY}/*.txt \
	${INSTALL_ROOT}/usr/share/doc/ttf-gentium
