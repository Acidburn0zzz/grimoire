FONT_DIR=${INSTALL_ROOT}/usr/share/fonts/TTF
mkdir  -p  $FONT_DIR  &&
install -m 644 -o root -g root *.ttf  $FONT_DIR  &&
if  [  -d  ${INSTALL_ROOT}/etc/fonts/  ];  then
  if  !  [  -e  ${INSTALL_ROOT}/etc/fonts/local.conf  ];  then
    install -m 644 -o root -g root local.conf ${INSTALL_ROOT}/etc/fonts
  fi
fi
