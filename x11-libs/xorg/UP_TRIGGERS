#
# Go through each provider monolithic X spells provided
#
for provider in X11-LIBS X11-SERVER X11-UTILS OPENGL XDAMAGE
do
  #
  # List each spell which still depends on monolithic X for the providers
  #
  for x11_libs_provider in $(gaze provides $(provider))
  do
    for spell in $(gaze depends $(x11_libs_provider) 1 | cut -d: -f1)
      #
      # Recast each spell still using monolithic X, if it's installed
      #
      if spell_ok $spell
      then
        up_trigger $spell cast_self
      fi
    done  # Finished spell loop
  done  # Finished x11_libs_provider loop
done  # Finished provider loop
