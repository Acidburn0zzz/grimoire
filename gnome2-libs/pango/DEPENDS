depends automake    &&
depends cairo       &&
depends fontconfig  &&
depends glib2       &&
if list_find "$PANGO_OPTS" "--with-x"; then
  depends libx11      &&
  depends libxau      &&
  depends libxft      &&
  depends libxdmcp    &&
  depends libxrender
fi &&

if spell_ok cairo && [[ $(installed_version cairo) < 1.8 ]]; then
  force_depends cairo
fi &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "Build documentation with gtk-doc"

