case $THIS_SUB_DEPENDS in
  X) message "Pango with X11 support requested, forcing libx11 dependency" &&
       depends libx11 "--with-x11" &&
       depends libxau &&
       depends libxft &&
       depends libxdmcp &&
       depends libxrender
    *) message "${PROBLEM_COLOR}bogus sub_depends: $SPELL $THIS_SUB_DEPENDS${DEFAULT_COLOR}"
       return 1;;
esac
