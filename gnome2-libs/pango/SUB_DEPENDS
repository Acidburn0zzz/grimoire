case $THIS_SUB_DEPENDS in
  X) message "Pango with XFT support requested, forcing libxft dependency" &&
       depends libxft "--with-xft" &&
       depends libx11 &&
       depends libxau &&
       depends libxdmcp &&
       depends libxrender
       ;;
    *) message "${PROBLEM_COLOR}bogus sub_depends: $SPELL $THIS_SUB_DEPENDS${DEFAULT_COLOR}"
       return 1;;
esac
