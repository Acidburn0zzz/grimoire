local VER=`"$INSTALL_ROOT/usr/bin/pango-querymodules" --version  \
           | grep interface`                                     &&
VER=${VER##* }                                                   &&

mkdir -p           "$INSTALL_ROOT/etc/pango"                        &&
pango-querymodules "$INSTALL_ROOT/usr/lib/pango/$VER/modules/"*.so  \
                   > "$INSTALL_ROOT/etc/pango/pango.modules"
