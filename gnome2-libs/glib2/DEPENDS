depends pkgconfig &&

if  !  spell_installed  pkgconfig;  then
  force_depends  pkgconfig
fi  &&

depends perl      &&

optional_depends gettext                            \
                 ""                                 \
                 "--with-libiconv=no"               \
                 "Build with gettext?"              &&

optional_depends gtk-doc                            \
                 "--enable-gtk-doc"                 \
                 "--disable-gtk-doc"                \
                 "Build documentation with gtk-doc"
