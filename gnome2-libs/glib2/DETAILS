           SPELL=glib2
         VERSION=2.14.2
          BRANCH=`echo $VERSION | cut -d . -f 1,2`
          SOURCE=glib-$VERSION.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/glib-$VERSION
   SOURCE_URL[0]=$GNOME_URL/sources/glib/$BRANCH/$SOURCE
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig:WORKS_FOR_ME"
      LICENSE[0]=LGPL
