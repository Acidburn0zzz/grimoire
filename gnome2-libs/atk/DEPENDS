depends automake &&
depends libtool &&
depends glib2 &&

optional_depends gobject-introspection \
                 "--enable-introspection=yes" \
                 "--enable-introspection=no" \
                 "to enable introspection support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "Build documentation with gtk-doc"
