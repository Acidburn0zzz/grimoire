depends g++ &&
depends glib2 &&

if [[ $ENCHANT_ZEMBEREK == y ]]; then
  depends dbus-glib
fi &&

optional_depends ispell \
                 "--enable-ispell" "--disable-ispell" \
                 "for Ispell support" &&

optional_depends aspell \
                 "--enable-aspell" "--disable-aspell" \
                 "for Aspell support" &&

optional_depends hspell \
                 "--enable-hspell" "--disable-hspell" \
                 "for Hspell support"
