config_query_option GSCREENSAVER_LOCKING "Enable display locking support?" y   \
                    "--enable-locking" "--disable-locking"                     &&

config_query_option GSCREENSAVER_MIT "Include support for MIT screensaver?" y  \
                    "--with-mit-ext" "--without-mit-ext"                       &&

config_query GSCREENSAVER_CONVERT "Import xscreensaver hacks?" n                
