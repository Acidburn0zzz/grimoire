                 "--enable-alsa"              \
                 "--disable-alsa"             \
                 "Enable ALSA audio support"  &&

optional_depends esound                       \
                 "--enable-esd"               \
                 "--disable-esd"              \
                 "Enable ESD audio support"   &&

optional_depends gstreamer                    \
                 "--enable-gstreamer"         \
                 "--disable-gstreamer"        \
                 "Enable gstreamer support"  

