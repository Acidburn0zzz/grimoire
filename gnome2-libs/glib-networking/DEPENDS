. "$GRIMOIRE/FUNCTIONS" &&

depends glib2 &&

if spell_ok glib2 && is_version_less $(installed_version glib2) 2.32; then
  force_depends glib2
fi &&

depends libgcrypt      &&

optional_depends gnutls \
                 "--with-gnutls" \
                 "--without-gnutls" \
                 "for GNUTLS' SSL support" &&

optional_depends ca-certificates \
                 "" \
                 "--without-ca-file" \
                 "for SSL root certificates"
