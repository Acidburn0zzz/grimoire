depends python &&
depends glib2 &&
depends pycairo &&

optional_depends gobject-introspection      \
                 "--enable-introspection"   \
                 "--disable-introspection"  \
                 "to enable introspection"  &&

optional_depends libffi \
                 "--with-ffi" \
                 "--without-ffi" \
                 "to enable libffi support"
