depends  autoconf      &&
depends  automake      &&
depends  libtool       &&
depends  libxml2       &&
depends glib2          &&
depends  libgpg-error  &&
depends  sqlite        &&

if [[ $LIBSOUP_GNOME == "y" ]]; then
  depends libproxy
  depends gconf2
  depends libgnome-keyring
fi &&

if [[ $LIBSOUP_DEVEL == "y" ]]; then
depends glib-networking
else
optional_depends gnutls \
                 "--enable-ssl" \
                 "--disable-ssl" \
                 "for GNUTLS' SSL support"
fi

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "Build documenation with gtk-doc" 
