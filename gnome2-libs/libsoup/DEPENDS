depends  autoconf      &&
depends  automake      &&
depends  libtool       &&
depends  libxml2       &&
depends  glib2         &&
depends  libgpg-error  &&

if [[ ${LIBSOUP_DEVEL} == "y" ]]; then
  depends libproxy
fi &&

optional_depends gnutls \
                 "--enable-ssl" \
                 "--disable-ssl" \
                 "for GNUTLS' SSL support" &&

optional_depends gconf2 \
                 "" \
                 "--without-gnome" \
                 "for GNOME proxy support." &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "Build documenation with gtk-doc" 
