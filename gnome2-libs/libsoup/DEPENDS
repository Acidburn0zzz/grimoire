depends  autoconf      &&
depends  automake      &&
depends  libtool       &&
depends  libxml2       &&
if [[ "$LIBSOUP_DEVEL" == "y" ]]; then
depends  -sub "GLIB_DEVEL" glib2 
else
depends glib2
fi &&
depends  libgpg-error  &&
depends  sqlite        &&

if [[ $LIBSOUP_GNOME == "y" ]]; then
  depends libproxy
  depends gconf2
fi &&

optional_depends gnutls \
                 "--enable-ssl" \
                 "--disable-ssl" \
                 "for GNUTLS' SSL support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "Build documenation with gtk-doc" 
