depends glib2 &&
depends gtk+2 &&

optional_depends libglade2 \
                 "--enable-libglade" \
                 "--disable-libglade" \
                 "for libglade support" &&

optional_depends glade3 \
                 "--enable-glade" \
                 "--disable-glade" \
                 "for Glade 3 support" &&

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "to build documentation"
