local XKLAVIER_XLIBS

depends  zlib      &&
depends  libxml2   &&
depends  xorg-libs  &&
depends  iso-codes  &&

XKLAVIER_XLIBS="$(get_spell_provider $SPELL  xorg-libs)"  &&

if  [[ "${XKLAVIER_XLIBS:0:4}"  !=  "xorg" ]];  then
  depends  xfree86_xkb_xml
fi  &&

optional_depends  doxygen                      \
                  '--enable-doxygen'           \
                  '--disable-doxygen'          \
                  'to generate documentation'
