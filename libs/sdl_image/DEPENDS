depends sdl &&

optional_depends libpng \
                 "--enable-png" \
		 "--disable-png" \
		 "for PNG support" &&

optional_depends JPEG \
                 "--enable-jpg" \
		 "--disable-jpg" \
		 "for JPG support" &&

optional_depends tiff \
                 "--enable-tif" \
		 "--disable-tif" \
		 "for TIFF support"
