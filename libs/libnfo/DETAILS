           SPELL=libnfo
if  [  "$LIBPLAYER_SCM_AUTOUPDATE"  ==  "n"  ];  then
         VERSION=mercurial
else
         VERSION=$(date +%Y%m%d)
fi
          SOURCE=$SPELL-hg.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-hg
   SOURCE_URL[0]=hg_http://hg.geexbox.org/libnfo:libnfo-hg
  FORCE_DOWNLOAD="on"
   SOURCE_IGNORE=volatile
        WEB_SITE=http://geexbox.org
         ENTERED=20091204
