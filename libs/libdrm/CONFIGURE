if [[ $LIBDRM_VCS == y ]]; then
  config_query LIBDRM_NV 'enable experimental nouveau api?' n
fi &&
if [[ $LIBDRM_VCS == y ]]; then
  config_query LIBDRM_RADEON 'enable experimental radeon api?' n
fi &&
if [[ $LIBDRM_VCS == y ]]; then
  config_query LIBDRM_LIBS 'install radeon libs?' n
fi &&
if [[ $LIBDRM_VCS == y ]]; then
  config_query LIBDRM_KERNEL 'install kernel modules?' n
fi
