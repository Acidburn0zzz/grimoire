depends smgl-fhs &&
optional_depends zlib  \
                 '--enable-pcre2grep-libz' \
                 '' \
                 'handle .gz files in pcre2grep' &&

optional_depends bzip2  \
                 '--enable-pcre2grep-libbz2' \
                 '' 'handle .bz2 files in pcre2grep' &&

optional_depends readline \
                 '--enable-pcre2test-libreadline' \
                 '' \
                 'use system readline'
