  else   VERSION=svn
  fi

          SOURCE=$SPELL-svn.tar.bz2
   SOURCE_URL[0]=svn_http://svn.pardus.org.tr/projeler/iksemel:iksemel
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-svn
