depends  g++                                    &&
depends  boost-jam                              &&
if list_find "$BOOST_LIBS" "python"
then
  depends python "--with-python-version=$(installed_version python | cut -c-3)"
fi                                              &&
optional_depends  icu                           \
                  "-sHAVE_ICU=1"                \
                  ""                            \
                  "Unicode support"
