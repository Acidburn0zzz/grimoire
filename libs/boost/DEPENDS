depends -sub CXX gcc                                    &&
if list_find "$BOOST_LIBS" "python"             ||
   list_find "$BOOST_LIBS" "all"
then
  depends python
fi                                              &&
if list_find "$BOOST_LIBS" "graph"              ||
   list_find "$BOOST_LIBS" "all"
then
  depends expat
fi                                              &&
if list_find "$BOOST_LIBS" "mpi"              ||
   list_find "$BOOST_LIBS" "all"
then
  depends openmpi
fi                                              &&
optional_depends  icu                           \
                  "-sHAVE_ICU=1"                \
                  ""                            \
                  "Unicode support"
