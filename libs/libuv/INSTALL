install -m644 $SOURCE_DIRECTORY/include/uv.h $INSTALL_ROOT/usr/include/ &&
mkdir -p $INSTALL_ROOT/usr/include/uv-private &&
install -m644 $SOURCE_DIRECTORY/include/uv-private/*.h $INSTALL_ROOT/usr/include/uv-private/ &&
install -m644 $SOURCE_DIRECTORY/libuv.a $INSTALL_ROOT/usr/lib/ &&
install -m644 $SOURCE_DIRECTORY/libuv.so $INSTALL_ROOT/usr/lib/libuv.so.${VERSION} &&
ln -s /usr/lib/libuv.so.${VERSION} $INSTALL_ROOT/usr/lib/libuv.so.$(echo ${VERSION} | cut -f1,2 -d.) &&
ln -s /usr/lib/libuv.so.${VERSION} $INSTALL_ROOT/usr/lib/libuv.so.$(echo ${VERSION} | cut -f1 -d.)
