                  '--enable-jpeg'           \
                  '--disable-jpeg'          \
                  'for JPEG image support'  &&

optional_depends  'libvorbis'                     \
                  '--enable-ogg'                  \
                  '--disable-ogg'                 \
                  'for Ogg/Vorbis audio support'
