depends glib2                        &&
depends cairo '--with-cairo=system'  &&

optional_depends GIFLIB                 \
                 "--with-libgif"        \
                 "--without-libgif"     \
                 "Enable GIF support"   &&

optional_depends tiff                   \
                 "--with-libtiff"       \
                 "--without-libtiff"    \
                 "Enable TIFF support"  &&

optional_depends JPEG                   \
                 "--with-libjepg"       \
                 "--without-libjepg"    \
                 "Enable JPEG support"  &&

optional_depends libpng                 \
                 "--with-libpng"        \
                 "--without-libpng"     \
                 "Enable PNG support"   &&

optional_depends libexif                   \
                 '--with-libexif'          \
                 '--without-libexif'       \
                 'for EXIF image support'
