SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
   SOURCE_URL[0]=http://sourceforge.net/projects/vimgadgets/files/$SPELL/$VERSION/$SOURCE/download
      SOURCE_GPG="gurus.gpg:${SOURCE}.sig"
