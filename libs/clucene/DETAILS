          SPELLX=$SPELL-core-$VERSION
#  fi
          SOURCE=$SPELLX.tar.gz
   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
fi
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELLX
        WEB_SITE=http://sourceforge.net/projects/clucene/
