           SPELL=clucene
if [[ $CLUC_VER == svn ]];then
  if [[ "$CLUC_SVN_AUTOUPDATE" == "y" ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
  FORCE_DOWNLOAD=on
          SPELLX=$SPELL-svn
          SOURCE=$SPELLX.tar.bz2
   SOURCE_IGNORE=volatile
   SOURCE_URL[0]=svn_http://clucene.svn.sourceforge.net/svnroot/clucene/trunk:clucene
else
#  if [[ $CLUC_VER == devel ]];then
#         VERSION=0.9.23.0
