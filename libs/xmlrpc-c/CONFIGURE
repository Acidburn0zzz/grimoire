config_query_option XMLRPCC_OPTS                              \
                    "Build abyss server?"                     \
                    y                                         \
                    "--enable-abyss-server"                   \
                    "--disable-abyss-server"                  &&
config_query_option XMLRPCC_OPTS                              \
                    "Use fork in abyss instead of pthreads?"  \
                    y                                         \
                    "--enable-abyss-threads"                  \
                    "--disable-abyss-threads"                 &&
config_query_option XMLRPCC_OPTS                              \
                    "Build cgi server?"                       \
                    y                                         \
                    "--enable-cgi-server"                     \
                    "--disable-cgi-server"

