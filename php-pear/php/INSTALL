. "$GRIMOIRE/FUNCTIONS" &&

default_install &&

if is_version_less "${VERSION}" 5.3; then
  install_config_file "$SOURCE_DIRECTORY/php.ini-recommended" \
                      "$INSTALL_ROOT/etc/php.ini"
else
  install_config_file "$SOURCE_DIRECTORY/php.ini-production" \
                      "$INSTALL_ROOT/etc/php.ini"
fi
