default_pre_build &&
cd "${SOURCE_DIRECTORY}" &&

if [[ $PHP5_BRANCH == legacy ]]; then
  unpack_file 4 &&
  patch -p1 < "${SOURCE_CACHE}/${SOURCE4}" &&
  patch -p0 < "$SPELL_DIRECTORY/pcre830.patch"
fi &&

if [[ "${PHP5_SUHOSIN}" == "y" ]]; then
    unpack_file 2 &&
    zcat "${SOURCE_CACHE}/${SOURCE2}" | patch -p1
fi &&

# freetype2 >=2.5 fix
if [[ $PHP5_BRANCH == legacy ]] || [[ $PHP5_BRANCH == previous ]]; then
  sedit "s:freetype/freetype.h:freetype.h:" configure
fi
