        VERSION2=0.9.6.2
         SOURCE2=suhosin-patch-$VERSION-$VERSION2.patch.gz
     SOURCE2_URL="http://download.suhosin.org/$SOURCE2"
         SOURCE3=$SOURCE2.sig
     SOURCE3_URL="http://download.suhosin.org/$SOURCE3"
     SOURCE2_GPG="$SOURCE3:suhosin.gpg:UPSTREAM_KEY"
fi

