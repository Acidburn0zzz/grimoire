default_pre_build      &&
# can we use existing fpc?
if ! spell_ok fpc; then
  cd  $SOURCE_DIRECTORY  &&
  mkdir  bootstrap       &&
  cd     bootstrap       &&
  unpack_file 2          &&
  unpack_file 3  
fi &&
# we need  libgdb.a in our tree
cd  $SOURCE_DIRECTORY    &&
local GDB WHERE &&
GDB=$INSTALL_ROOT/usr/lib/libgdb.a  &&
if [ -e $GDB ];then
  WHERE=packages/base/gdbint/libgdb/units/i386-linux/ &&
  mkdir -p $WHERE &&
  cp $GDB $WHERE
fi
