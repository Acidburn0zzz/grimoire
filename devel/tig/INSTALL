default_install          &&
mkdir -p ${INSTALL_ROOT}/usr/share/man/man{1,5,7} &&
install -m644 -o root -g root ${SOURCE_DIRECTORY}/tig.1 ${INSTALL_ROOT}/usr/share/man/man1/   &&
install -m644 -o root -g root ${SOURCE_DIRECTORY}/tigrc.5 ${INSTALL_ROOT}/usr/share/man/man5/ &&
install -m644 -o root -g root ${SOURCE_DIRECTORY}/tigmanual.7 ${INSTALL_ROOT}/usr/share/man/man7/
