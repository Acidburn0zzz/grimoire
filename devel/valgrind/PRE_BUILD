default_pre_build        &&
cd  "$SOURCE_DIRECTORY"  &&

if [[ $VALGRIND_SVN == y ]]
then
  NOCONFIGURE=Y  ./autogen.sh
fi &&

# Patch to compile with glibc version 2.11
# By Maurice van der Pot <griffon26@gentoo.org> from gentoo
GLIBC_VER=$(installed_version glibc) &&
if [[ $GLIBC_VER == 2.11 ]] || [[ ${GLIBC_VER%.*} == 2.11 ]]; then
  patch -p0 < ${SCRIPT_DIRECTORY}/valgrind-3.5.0-glibc-2.11.patch &&
  autoreconf
fi
