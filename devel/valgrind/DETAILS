           SPELL=valgrind
if [[ $VALGRIND_SVN == y ]]
then
  if [[ $VALGRIND_SVN_AUTOUPDATE == y ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=svn
  fi
          SOURCE=$SPELL-svn.tar.bz2
   SOURCE_URL[0]=svn://svn.valgrind.org/valgrind/trunk:$SPELL-svn
