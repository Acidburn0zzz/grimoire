default_pre_build                                      &&
cp  $SOURCE_DIRECTORY/composer/config/mozconfig.linux  \
    $SOURCE_DIRECTORY/.mozconfig                       &&

#
# Set the correct install location
#
sedit "s:#ac_add_options --with-default-mozilla-five-home=/usr/lib/mozilla:ac_add_options --with-default-mozilla-five-home=$INSTALL_ROOT/usr/lib/nvu:"  $SOURCE_DIRECTORY/.mozconfig
