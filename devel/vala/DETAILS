     SOURCE_HASH=sha512:d9f321d3ba00015eb31bd730243fca33641bd189886040de408f97030b1b10a03a08c88ae6faf380e6e7e539b3ca63ee7062fc96a03daef8a844b60098ae6866
          BRANCH=`echo $VERSION|cut -d . -f 1,2`
          SOURCE=$SPELL-$VERSION.tar.bz2
