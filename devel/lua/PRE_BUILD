default_pre_build        &&
cd  "$SOURCE_DIRECTORY"  &&

patch -p0 < $SPELL_DIRECTORY/lua-5.1-dynlib.patch                                &&
sedit  "s:/usr/local:$INSTALL_ROOT/usr:"  etc/lua.pc                             &&
sedit  "s:INSTALL_MAN=.*:INSTALL_MAN=\$\{prefix\}/share/man/man1:"  etc/lua.pc   &&
sedit  "s:INSTALL_TOP=.*:INSTALL_TOP=$INSTALL_ROOT/usr:"  Makefile               &&
sedit  "s:INSTALL_MAN=.*:INSTALL_MAN=\$(INSTALL_TOP)/share/man/man1:"  Makefile  &&
sedit  "s:^CFLAGS=.*:CFLAGS=${CFLAGS} \$(MYCFLAGS):"  src/Makefile               &&
sedit  "s:MYLDFLAGS=.*:MYLDFLAGS=${LDFLAGS}:"  src/Makefile

