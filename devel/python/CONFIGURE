config_query_option PYTHON_OPTS \
                    "enable IPv6?" y \
                    "--enable-ipv6" \
                    "--disable-ipv6" &&

config_query_option PYTHON_OPTS \
                    "enable threads support?" y \
                    "--with-threads" \
                    "--without-threads" &&

if echo $PYTHON_OPTS | grep -q -- "--with-threads"; then
  config_query_option PYTHON_OPTS \
                      "enable POSIX threads (pthreads) support?" n \
                      "--with-pth" \
                      "--without-pth"
fi
