   SOURCE_URL[0]=$GNOME_URL/sources/$SPELL/$BRANCH/$SOURCE
     SOURCE_HASH=sha512:f663945a8161508e77fb09efcabf2356d27b47371b4df065dcf8bdebe07f112c7123665f03c13eb3e2531994366823a888947a6a89ea15db2522bd938d4824b2
