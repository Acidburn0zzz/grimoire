config_query_list  GIT_SHA_OPT                                \
                   "Which sha option would you like to use?"  \
                   openssl                                    \
                   mozilla                                    &&

persistent_add     GIT_MAKE_OPTS                              &&

if [[ $GIT_SHA_OPT != openssl ]] ; then
  GIT_MAKE_OPTS="$GIT_MAKE_OPTS NO_OPENSSL=true"
fi
