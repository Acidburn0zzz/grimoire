   SOURCE_URL[0]=http://radare.nopcode.org/get/$SOURCE
     SOURCE_HASH=sha512:9f8930d6c5cef5d7afd8c5980d35c88c8dd26bcbc5838d8dc5eb643f8764fc36fc65938600b5e074468985a07d0035b64e4f088e317634e86e0dca13d51277a3
