depends -sub CXX gcc &&
depends python &&
depends zlib '--shared-zlib' &&

optional_depends c-ares \
                 "--shared-cares" \
                 "" \
                 "to use system c-ares library instead of bundled" &&

optional_depends SSL \
                 "--shared-openssl" \
                 "" \
                 "to use system SSL library instead of bundled"
