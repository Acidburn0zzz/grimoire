mk_source_dir $SOURCE_DIRECTORY &&
cd $BUILD_DIRECTORY &&
verify_file '' &&
xz -dc $SOURCE_CACHE/$SOURCE | tar -xf -
message "${MESSAGE_COLOR}Fixing compilation with newer glibc...${DEFAULT_COLOR}" &&
patch "${SOURCE_DIRECTORY}"/util.c \
      "${SCRIPT_DIRECTORY}"/glibc-2.15.patch &&
cd $SOURCE_DIRECTORY
