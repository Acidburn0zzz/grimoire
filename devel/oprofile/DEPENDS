depends g++ &&
depends libxslt &&
depends popt &&

optional_depends libx11 \
                 '--with-x'  \
                 '--without-x'  \
                 'to use X'  && 
if is_depends_enabled $SPELL libx11; then
  depends libxcursor &&
  depends libsm &&
  depends libxft &&
  depends libxrandr
fi &&

optional_depends qt-x11 \
                 '--with-qt-dir=/usr --with-qt-includes=/usr/include/qt --with-qt-libraries=/usr/lib' \
                 '' \
                 'to build a GUI'
