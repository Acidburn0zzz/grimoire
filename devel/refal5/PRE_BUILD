mk_source_dir  ${SOURCE_DIRECTORY}  &&
cd             ${SOURCE_DIRECTORY}  &&
unpack_file  ''                     &&

cp makefile.lin makefile            &&

rm -f *.rsl                         &&

sedit "s:-L./linux/:${LDFLAGS}:" makefile  &&
sedit "s:-c:${CFLAGS} -c:" makefile        &&
sedit "s:REF5RSL=.*:REF5RSL=${TRACK_ROOT}/usr/share/${SPELL}:" ${SPELL}.cf_
