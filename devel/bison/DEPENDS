depends gnupg &&
depends m4 &&
depends smgl-fhs &&

if spell_ok m4 && [[ $(installed_version m4) < 1.4.16 ]]; then
  force_depends m4
fi &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "for Native Language Support" &&

optional_depends g++ "" "" "for C++ support"
