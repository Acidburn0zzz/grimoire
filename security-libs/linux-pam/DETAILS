         SOURCE2=$SOURCE.sign
  SOURCE2_URL[0]=$KERNEL_URL/pub/linux/libs/pam/pre/library/$SOURCE2
  SOURCE2_URL[1]=ftp://ftp.kernel.org/pub/linux/libs/pam/pre/library/$SOURCE2

      SOURCE_GPG=kernel.gpg:$SOURCE2
  SOURCE2_IGNORE=signature

