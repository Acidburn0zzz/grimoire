           SPELL=mesalib
if  [[  "$MESALIB_GIT"  ==  "y"  ]];  then
  if  [[  "$MESALIB_GIT_AUTOUPDATE"  ==  "y"  ]];  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/mesalib-git
  FORCE_DOWNLOAD="on"
   SOURCE_URL[0]=git://anongit.freedesktop.org/git/mesa/mesa:mesalib-git
   SOURCE_IGNORE=volatile
else
         VERSION=7.0
          SOURCE=MesaLib-${VERSION}.tar.bz2
   SOURCE_URL[0]=${SOURCEFORGE_URL}/mesa3d/${SOURCE}
SOURCE_DIRECTORY=${BUILD_DIRECTORY}/Mesa-${VERSION}
     SOURCE_HASH=sha512:ae0ab5584e38e6370dd68d1b0f455bc03deae6508dfa66a128d51c465c814df51361f01f5768357013885de1c8ce28daf565ddad74bdfe907ad29949291fbfc8
      PATCHLEVEL=0
