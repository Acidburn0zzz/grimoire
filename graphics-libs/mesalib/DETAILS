   SOURCE_IGNORE=volatile
else
         VERSION=10.6.0
     SOURCE_HASH=sha512:6a689de013269336b744f7b0a1acfd065eaffdb8ca2ed22d979eac0163abb16d2e6072433c0d529491083efae4d1645c60e26b22e838f5bd76f0082e3bc80e6d
      PATCHLEVEL=0
