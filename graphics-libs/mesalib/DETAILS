   SOURCE_IGNORE=volatile
else
         VERSION=10.6.1
     SOURCE_HASH=sha512:7ba5f4a7e421e6f198c4e80c1f0259071e1115aecdbe2846a7986bcfe1503a6f4a1806126295e3d9f4b6aee63dd107e82c3972ccb8079b9b5baf1f65246d21ab
      PATCHLEVEL=0
