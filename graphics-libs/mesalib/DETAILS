   SOURCE_IGNORE=volatile
else
         VERSION=10.5.4
     SOURCE_HASH=sha512:e8268b5a28eeafe03d8d8e4a1b3865e5b4a05501507d5b623f7d4c542ade3d8fa6fef2a2b6c05d6aaefa81de26365ab6bb895a0ba2a1d9c05dd1fd701bdab5f5
