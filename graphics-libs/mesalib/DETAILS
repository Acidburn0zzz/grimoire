   SOURCE_IGNORE=volatile
else
         VERSION=11.0.5
     SOURCE_HASH=sha512:87b36b48d6a9d6abd47fb127c2bb2048aa1099f56ec2c9c4bcf6edd7c0d055abfffb4f63462a81b8852f79a8d8f173e7de5ac0dd8759b1645ea601c19fe26ee3
