           SPELL=glu
  if [[ $GLU_AUTOUPDATE == y ]]
  then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=${SPELL}-git.tar.bz2
SOURCE_DIRECTORY=$BUILD_DIRECTORY/${SPELL}-git
