depends  autoconf    &&
depends  automake    &&
depends  libtool     &&
depends  libxdamage  &&
depends  OPENGL      &&
depends  xorg-libs   &&

optional_depends  "libpng"                    \
                  "--enable-png"              \
                  "--disable-png"             \
                  "for PNG graphics support"  &&

optional_depends  "jpeg"                       \
                  "--enable-jpeg"              \
                  "--disable-jpeg"             \
                  "for JPEG graphics support"  &&

optional_depends  "giflib"                    \
                  "--enable-gif"              \
                  "--disable-gif"             \
                  "for GIF graphics support"  &&

optional_depends  "tiff"                       \
                  "--enable-tiff"              \
                  "--disable-tiff"             \
                  "for TIFF graphics support"
