depends jpeg &&
optional_depends gtk+2 \
                 "--enable-libgutenprintui2" \
                 "--disable-libgutenprintui2" \
                 "for ui plugin (GTK+2-based)" &&

optional_depends gimp \
                 "--with-gimp2" \
                 "--without-gimp2" \
                 "for GIMP print plugin" &&

optional_depends "CUPS" \
                 "--with-cups --enable-cups-ppds" \
                 "--disable-cups" \
                 "for CUPS support"
