           SPELL=pekwm
         VERSION=0.1.5
          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=http://pekwm.org/files/$SOURCE
      SOURCE_GPG=gurus.gpg:${SOURCE}.sig
