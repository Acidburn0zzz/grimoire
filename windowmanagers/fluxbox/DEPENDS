depends xorg-libs &&
depends freetype2 &&
depends g++ &&

if [[ $FLUXBOX_GIT == y ]]; then
  depends git
fi &&

optional_depends imlib2 \
                 "--enable-imlib2" \
                 "--disable-imlib2" \
                 "for Imlib2 (pixmap themes) support" &&

optional_depends gnome-libs \
                 "--enable-gnome" \
                 "--disable-gnome" \
                 "for GNOME support" &&

suggest_depends feh "" "" "for setting wallpapers with feh"
