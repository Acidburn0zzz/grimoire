Patch() {
	message "${MESSAGE_COLOR}applying ${FILE_COLOR}$1${DEFAULT_COLOR}" &&
	patch -p0 < "$1" || return 1
}
default_pre_build &&
if [[ "$FVWM_RELEASE" == "unstable" ]] &&
   [[ "$FVWM_PATCHSET" == "y" ]]; then
        cd ${SOURCE_DIRECTORY}            &&
	bzcat ${SCRIPT_DIRECTORY}/FlatSeparators-2.5.26.patch.bz2 | patch -p0
fi
