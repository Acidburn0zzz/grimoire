           SPELL=wm2
         WM2_CVS=y
#if  [[  "$WM2_CVS" == "y"  ]];  then
    if  [[  "$WM2_CVS_AUTOUPDATE"  =  "y"  ]];  then
         VERSION=$(date +%Y%m%d)
    else
         VERSION=svn
    fi
          SOURCE=${SPELL}-svn.tar.bz2
