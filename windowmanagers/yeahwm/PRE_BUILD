default_pre_build                                                         &&

#
# Fix install locations
#
sedit "s/prefix\ =\ \$\(DESTDIR\)\/usr/prefix\ =\ ${INSTALL_ROOT}\/usr/g" \
                                             ${SOURCE_DIRECTORY}/Makefile &&
sedit "s/XROOT\ \ \ \ =\ \/usr\/X11R6/XROOT\ \ \ \ =\ ${INSTALL_ROOT}\/usr\/X11R6/g" \
                                             ${SOURCE_DIRECTORY}/Makefile &&

#
# Edit config file
#
if [ "${EDITCONFIG}" == "y" ]
then ${EDITOR:-nano} ${SOURCE_DIRECTORY}/config.h
fi
