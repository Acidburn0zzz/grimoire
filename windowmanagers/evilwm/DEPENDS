depends xorg-libs &&

if [[ "$EVILWM_SHAPE" = 'y' ]]; then
  depends libxext
fi &&

if [[ "$EVILWM_RANDR" = 'y' ]]; then
  depends libxrandr
fi  &&

optional_depends  "MOTIF"           \
                  "USEMOTIF"        \
                  ""                \
                  "Use Motif hints to find if a window should be borderless?" &&
