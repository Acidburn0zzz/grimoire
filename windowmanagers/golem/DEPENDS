depends  xorg-libs                                                     &&
optional_depends esound "--enable-sound" "--disable-sound"            \
                        "For sound support"                           &&
if [[ "$GOLEM_XINERAMA" = "--enable-xinerama" ]] ; then
  if [[  "$(get_spell_provider  ${1:-$SPELL}  xorg-libs)"  ==  "xorg-libs"  ]] ||
     [[  "$(get_spell_provider  ${1:-$SPELL}  xorg-libs)"  ==  "xorg-server"  ]] ; then
       depends libxinerama
  fi
fi
