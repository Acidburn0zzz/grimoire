default_pre_build      &&
cd ${SOURCE_DIRECTORY} &&

#right install paths
sedit "s/\/usr\/local/${INSTALL_ROOT}\/usr/" config.mk 

if ( is_depends_enabled $SPELL libxinerama ); then
  message "Leaving Xinerama enabled"
else
  sedit 's/^XINERAMA/#XINERAMA/g' config.mk &&
  message "Xinerama disabled"
fi
