mkdir -p $INSTALL_ROOT/usr/lib/vwm/modules &&
cd $SOURCE_DIRECTORY                       &&
install -m 0644 vwm.h $INSTALL_ROOT/usr/include/ &&
install -m 0755 vwm $INSTALL_ROOT/usr/bin        &&
cd modules/ptyterm                         &&
default_install                            &&
if [[ "$VIPER_SYSMON" = 'y' ]]; then
  cd ../sysmon &&
  default_install
fi
