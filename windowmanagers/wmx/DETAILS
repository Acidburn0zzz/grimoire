   SOURCE_URL[0]=cvs://:pserver:anonymous@wm2.cvs.sourceforge.net:/cvsroot/wm2:wmx
   SOURCE_IGNORE=volatile
else
         VERSION=6
          SOURCE=${SPELL}-${VERSION}.tar.gz
