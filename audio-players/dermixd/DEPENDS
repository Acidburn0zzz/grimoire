optional_depends libsndfile "--enable-sndfile" "--disable-sndfile" "sndfile input" &&
optional_depends file "--enable-magic" "--disable-magic" "identify files using libmagic" &&
optional_depends ladspa "--enable-ladspa" "--disable-ladspa" "using LADSPA plugins" &&
optional_depends soundtouch "--enable-soundtouch" "--disable-soundtouch" "timepitch effect"
