depends gtk+2 &&
depends libglade2 &&
depends libmcs &&
depends libmowgli &&
depends pango &&
depends cairo &&

optional_depends gtk+3 \
                 "" "--disable-gtk3" \
                 "to use GTK3 instead of GTK2" &&

optional_depends libsamplerate \
                 "--enable-samplerate" \
                 "--disable-samplerate" \
                 "support for samplerate" &&
optional_depends dbus \
                 "--enable-dbus" \
                 "--disable-dbus" \
                 "support for dbus notifications" &&
optional_depends pcre \
                 "--with-regexlib=pcre" \
                 "--with-regexlib=gnu" \
                 "to use PCRE regex library instead of GNU library"
