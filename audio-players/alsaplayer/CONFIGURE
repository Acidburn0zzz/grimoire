config_query_option  APLAY_OSS                        \
                     "Enable OSS driver support?"  y  \
                     "--enable-oss"                   \
                     "--disable-oss"                  &&

config_query_option  APLAY_SPARC                      \
                     "Enable SPARC sound driver?"  n  \
                     "--enable-sparc"                 \
                     "--disable-sparc"                &&

config_query_option  APLAY_SGI                      \
                     "Enable SGI sound driver?"  n  \
                     "--enable-sgi"                 \
                     "--disable-sgi"
