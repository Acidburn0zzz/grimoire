depends ncurses &&

optional_depends libx11 \
                 "--with-x" \
                 "--without-x" \
                 "for a GUI editor" &&

if is_depends_enabled $SPELL libx11; then
  depends expat &&

  optional_depends libxft \
                   "--with-xft" \
                   "--without-xft" \
                   "for Xft support in X11"
fi
