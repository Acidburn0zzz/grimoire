default_pre_build                                        &&

if [[ "${TIDY_MAN_PAGES}" == "y" ||
      "${TIDY_HTML_DOCS}" == "y" ||
      "${TIDY_API_DOCS}"  == "y" ]] 
then unpack_file 2
fi


if [ "$TIDY_CVS" == "y" ]; then
  cd "$SOURCE_DIRECTORY"                                 &&
  NOCONFIGURE=ON source ./build/gnuauto/setup.sh
fi                                                       &&

if [[ "${TIDY_MAN_PAGES}" == "y" ]] ; then
  sedit "s/GENERATE_MAN *=\ NO/GENERATE_MAN\ =\ YES/g"       \
            ${SOURCE_DIRECTORY}/htmldoc/doxygen.cfg
fi
