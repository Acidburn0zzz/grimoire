default_install                                                 &&

if [[ "${TIDY_MAN_PAGES}" == "y" ]] ; then
  mkdir -p ${INSTALL_ROOT}/usr/share/man/man3                   &&
  cp ${SOURCE_DIRECTORY}/htmldoc/man/man3/* ${INSTALL_ROOT}/usr/share/man/man3
fi                                                              &&

if [[ "${TIDY_HTML_DOCS}" == "y" ]] ; then
  mkdir -p ${INSTALL_ROOT}/usr/share/doc/tidy                   &&
  cp ${SOURCE_DIRECTORY}/htmldoc/* ${INSTALL_ROOT}/usr/share/doc/tidy
fi                                                              &&

if [[ "${TIDY_API_DOCS}" == "y" ]] ; then
  mkdir -p ${INSTALL_ROOT}/usr/share/doc/tidy/api               &&
  cp ${SOURCE_DIRECTORY}/htmldoc/api/* ${INSTALL_ROOT}/usr/share/doc/tidy/api
fi
