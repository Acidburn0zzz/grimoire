   SOURCE_URL[0]=http://mitglied.lycos.de/albkleine/${SOURCE}
     SOURCE_HASH=sha512:e10dc5b8fde9ea791809c39a700801f54e8bbe4d998b0fd7329a30171f8f0c6cbeb218f5fb5f3c6913d4913ce53adc3608d24569b76f55f09a0346df44842289
