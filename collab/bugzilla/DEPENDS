depends appconfig &&
depends perl-cgi  &&
depends file-spec &&
depends template-toolkit &&
depends mime-base64 &&
depends mime-tools &&

depends dbi              &&

if [[ "$BUGZILLA_DATABASE" == "mysql" ]]; then
  depends dbd-mysql
elif [[ "$BUGZILLA_DATABASE" == "postgresql" ]]; then
  depends dbd-pg
fi &&

if [[ "$BUGZILLA_CHARTING" == "y" ]]; then
  depends perl-gd  &&
  depends gd-graph &&
  depends gd-text  &&
  depends template-plugin-gd-image &&
  depends chart    
fi &&

