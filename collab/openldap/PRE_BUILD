default_pre_build &&
cd "$SOURCE_DIRECTORY" &&
if [[ "$OPENLDAP_CONTEXT" == y ]]; then
  message "${MESSAGE_COLOR}Applying the context patch.$DEFAULT_COLOR" &&
  # patch for version 2.3.33, also tested for 2.3.34
  bzcat "$SCRIPT_DIRECTORY/openldap-2.3.33-contextpatch.bz2" | patch -p1 &&
  autoconf
fi
