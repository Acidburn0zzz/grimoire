depends g++             &&
depends libtool		&&
depends openssl		&&
depends libmcrypt	&&
depends ncurses		&&
case $FB_VER in
       2.0) depends bison  &&
            depends icu    &&
            optional_depends libedit             \
                         "--with-editline"       \
                         "--without-editline"    \
                         "for fancy line editing"
            ;;
       2.1) depends btyacc &&
            depends icu '--with-system-icu'      &&
            optional_depends libedit             \
                         "-with-system-editline" \
                         "--without-editline"    \
                         "for fancy line editing"
            ;;
esac
