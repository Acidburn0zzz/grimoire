depends g++             &&
depends libtool		&&
depends openssl		&&
depends libmcrypt	&&
depends ncurses		&&
case $FB_VER in
       1.5) depends bison;;
       2.0) depends bison  &&  depends icu;;
       2.1) depends btyacc &&  depends icu;;
esac                    &&
optional_depends libedit "--with-editline" "--without-editline" "for fancy line editing"
