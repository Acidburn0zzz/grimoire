depends -sub CXX gcc     &&

if [[ $OLD == y ]]; then
  optional_depends SSL \
                   "--with-SSL" \
                   "--without-SSL" \
                   "for OpenSSL support"
else
  optional_depends SSL \
                   "--with-ssl" \
                   "--without-ssl" \
                   "for OpenSSL support"
fi  &&

