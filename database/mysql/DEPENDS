depends  zlib    &&
depends  perl    &&
depends  procps  &&
depends  g++     &&

optional_depends openssl \
                 "--with-openssl" \
                 "--without-openssl" \
                 "for OpenSSL support" &&

if  ! list_find "$MSQL_ENGINES" "none"  &&  list_find "$MSQL_ENGINES" "BerkeleyDB"; then
  depends  db  "--with-berkeley-db"
fi
