source $GRIMOIRE/config_query_multi.function                      &&

config_query_option  MSQL_SERVER                                  \
                     "Install client only?"                       \
                     n                                            \
                     "--without-server"                           \
                     "--with-server"                              &&

config_query_multi   MSQL_ENGINES                                 \
                     "What additional storage engines to build?"  \
                     none                                         \
                     all                                          \
                     ARCHIVE                                      \
                     BerkeleyDB                                   \
                     BLACKHOLE                                    \
                     CSV                                          \
                     EXAMPLE                                      \
                     FEDERATED                                    \
                     InnoDB                                       \
                     ndbcluster                                   &&

if  list_find "$MSQL_ENGINES"  "all"
then
  MSQL_ENGINES="ARCHIVE BerkeleyDB BLACKHOLE CSV EXAMPLE FEDERATED InnoDB ndbcluster"
fi                                                                &&

config_query_option  MSQL_EMBED                                   \
                     "Build the embedded server (libmysqld)?"     \
                     n                                            \
                     "--with-embedded-server"                     \
                     "--without-embedded-server"
