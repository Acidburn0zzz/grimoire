config_query_list VIRT_VER 'which version to build?' stable devel  &&
if [[ $VIRT_VER == devel ]];then
  message 'KDE4 does not need any of the optional vad'
  config_query VT_KDE 'only for use with KDE4?' y
  if [[ $VT_KDE == y ]];then
    return 0
  fi
fi &&
# check for running server
  (ps -A | grep virtuoso)   &&
    message ${PROBLEM_COLOR}please stop the virtuoso server and try again\
            ${DEFAULT_COLOR}    &&
    return 1
return 0
