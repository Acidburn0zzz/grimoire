cd $SOURCE_DIRECTORY &&
default_install &&

if is_depends_enabled $SPELL openssl; then
  cd contrib/pgcrypto &&
  default_install
fi &&

if is_depends_enabled $SPELL libxml2; then
  cd ../xml2 &&
  default_install
fi &&

touch $INSTALL_ROOT/var/log/postgres &&
chown postgres:postgres $INSTALL_ROOT/var/log/postgres
