config_query_option  XRX_XPRINT     \
          'Enable XPrint support?'  \
          y                         \
          '--enable-xprint'         \
          '--disable-xprint'        &&

config_query_option  XRX_PIC                      \
          'Try to use only PIC/non-PIC objects?'  \
          n                                       \
          '--enable-pic'                          \
          '--disable-pic'
