config_query_option  XCLOCK_XPRINT  \
          'Enable XPrint support?'  \
          y                         \
          '--enable-xprint'         \
          '--disable-xprint'        &&

config_query  XCLOCK_XFT                         \
          'Use Xft2 and Xrender for rendering?'  \
          y                                      &&

config_query_option  XCLOCK_XKB                  \
          'Use Xkb to sound bells?'              \
          y                                      \
          '--with-xkb'                           \
          '--without-xkb'                        
