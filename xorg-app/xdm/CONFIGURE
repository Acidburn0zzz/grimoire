config_query_option XDM_OPTS             \
          'Enable UNIX domain socket transport?'    \
          y                                         \
          '--enable-unix-transport'                 \
          '--disable-unix-transport'                &&

config_query_option XDM_OPTS      \
          'Enable TCP socket transport?'    \
          y                                 \
          '--enable-tcp-transport'          \
          '--disable-tcp-transport'         &&

config_query_option XDM_OPTS      \
          'Enable IPv6 support?'   \
          y                        \
          '--enable-IPv6'          \
          '--disable-IPv6'         &&

config_query_option XDM_OPTS   \
          'Enable Secrue RPC?'        \
          y                           \
          '--enable-secure-rpc'       \
          '--disable-secure-rpc'      &&

config_query_option XDM_OPTS           \
          'Display xpm logos in greeter?'   \
          y                                  \
          '--enable-xpm-logos'               \
          '--disable-xpm-logos'
