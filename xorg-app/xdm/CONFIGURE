config_query_option  XDM_XPRINT       \
          'Enable XPrint support?'    \
          y                           \
          '--enable-xprint'           \
          '--disable-xprint'          &&

config_query_option  XDM_UNIX_TRANSPORT             \
          'Enable UNIX domain socket transport?'    \
          y                                         \
          '--enable-unix-transport'                 \
          '--disable-unix-transport'                &&

config_query_option  XDM_TCP_TRANSPORT      \
          'Enable TCP socket transport?'    \
          y                                 \
          '--enable-tcp-transport'          \
          '--disable-tcp-transport'         &&

config_query_option  XDM_IPV6      \
          'Enable IPv6 support?'   \
          y                        \
          '--enable-IPv6'          \
          '--disable-IPv6'         &&

config_query_option  XDM_SECURE_RPC   \
          'Enable Secrue RPC?'        \
          y                           \
          '--enable-secure-rpc'       \
          '--disable-secure-rpc'      &&

config_query_option  XDM_XPM_LOGOS           \
          'Display xpm logos in greeter?'   \
          y                                  \
          '--enable-xpm-logos'               \
          '--disable-xpm-logos'              &&

config_query_option  XDM_PIC                       \
          'Try to use only PIC/non-PIC objects?'   \
          y                                        \
          '--with-pic'                             \
          '--without-pic'                          &&

config_query_option  XDM_PAM              \
          'Use PAM for authentication?'   \
          y                               \
          '--with-pam'                    \
          '--without-pam'                 
