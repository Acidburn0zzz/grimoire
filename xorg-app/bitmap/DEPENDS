depends  gawk              &&
depends  pkgconfig         &&
depends  util-macros       &&
depends  libx11            &&
depends  libxmu            &&
depends  libxaw            &&
depends  xbitmaps          &&

optional_depends  libxp    \
   "--with-xprint"         \
   "--disable-xprint"      \
   "For printing support"  &&

# bitmap needs either Xaw7 or Xaw8. Xaw6 won't do
if is_depends_enabled $SPELL libxp; then
  sub_depends  libxaw  XAW8
else
  sub_depends  libxaw  XAW7
fi
