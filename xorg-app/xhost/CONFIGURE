config_query_option  XHOST_UNIX_TRANSPORT         \
          'Enable UNIX domain socket transport?'  \
          y                                       \
          '--enable-unix-transport'               \
          '--disable-unix-transport'              &&

config_query_option  XHOST_TCP_TRANSPORT          \
          'Enable TCP socket transport?'          \
          y                                       \
          '--enable-tcp-transport'                \
          '--disable-tcp-transport'               &&

config_query_option  XHOST_IPV6_SUPPORT           \
          'Enable IPv6 support?'                  \
          y                                       \
          '--enable-IPv6'                         \
          '--disable-IPv6'                        &&

config_query_option  XHOST_SECURE_RPC             \
          'Enable Secure RPC?'                    \
          y                                       \
          '--enable-secure-rpc'                   \
          '--disable-secure-rpc'                  
