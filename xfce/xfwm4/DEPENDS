depends xfce-mcs-manager &&

if [[ $COMPOSITOR == y ]]; then
  depends libxdamage "--enable-compositor" &&
  depends libxrender
fi &&

optional_depends libxrandr \
                 "--enable-randr" \
                 "--disable-randr" \
                 "for X11 Xrandr extension support" &&

optional_depends startup-notification \
                 "" "" \
                 "for startup notification"
