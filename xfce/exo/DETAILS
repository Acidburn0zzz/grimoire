           SPELL=exo
 RELEASE_VERSION=$(cat $GRIMOIRE/xfce/xfce.version)
         VERSION=0.3.103
          SOURCE=$SPELL-$VERSION.tar.bz2
#         SOURCE2=$SOURCE.asc
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
   SOURCE_URL[0]=http://archive.xfce.org/src/xfce/$SPELL/${VERSION:0:3}/$SOURCE
#  SOURCE2_URL[0]=$SOURCE_URL.asc
      SOURCE_HASH=sha512:94dcec4ed56b13a35170f90dda55c2404a0143e4b4ec5c7439f8a44cd95ffe644b37bf26d0522dd613cf8a2564ff117c3c76a2a481c113df5ba9ada094cc5078
