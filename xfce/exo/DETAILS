           SPELL=exo
 RELEASE_VERSION=$(cat $GRIMOIRE/xfce/xfce.version)
         VERSION=0.3.101
          SOURCE=$SPELL-$VERSION.tar.bz2
#         SOURCE2=$SOURCE.asc
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
   SOURCE_URL[0]=http://www.xfce.org/archive/xfce-$RELEASE_VERSION/src/$SOURCE
#  SOURCE2_URL[0]=$SOURCE_URL.asc
      SOURCE_HASH=sha512:47fe3068288fe8db6eb1fa737bfa56d85d95fba54e39b3915d64bf8d40bf82ac10b7cbca91c49088befefb30c86fbb8dce9b25c5159d23264ff9dd01e214e0f6
