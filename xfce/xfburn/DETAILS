           SPELL=xfburn
if [[ $XFBURN_GIT == y ]]; then
  if [[ $XFBURN_GIT_AUTOUPDATE == y ]]; then
         VERSION=$(date +%Y%m%d)
  else
         VERSION=git
  fi
          SOURCE=$SPELL-git.tar.bz2
   SOURCE_URL[0]=git_http://git.xfce.org/git/apps/$SPELL:$SPELL-git
   SOURCE_IGNORE=volatile
  FORCE_DOWNLOAD=on
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-git"
else
