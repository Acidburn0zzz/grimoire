  sed -i "s:doc/Thunar:doc/$SPELL:g" \
         docs/manual/$lang/{images/,}Makefile.{am,in}
done &&


# See http://bugzilla.xfce.org/show_bug.cgi?id=2983
patch -p0 < $SCRIPT_DIRECTORY/thunar-zombie.patch
