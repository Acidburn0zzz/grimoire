           SPELL=gtk-xfce-engine
         VERSION=2.4.3
 RELEASE_VERSION=$(cat $GRIMOIRE/xfce/xfce.version)
          SOURCE=$SPELL-$VERSION.tar.bz2
	 SOURCE2=$SOURCE.asc
SOURCE_DIRECTORY="$BUILD_DIRECTORY/$SPELL-$VERSION"
   SOURCE_URL[0]=http://www.xfce.org/archive/xfce-$RELEASE_VERSION/src/$SOURCE
  SOURCE2_URL[0]=$SOURCE_URL.asc
        WEB_SITE=http://www.xfce.org/
      SOURCE_GPG=xfce.gpg:$SOURCE2:UPSTREAM_KEY
  SOURCE2_IGNORE=signature
      LICENSE[0]=GPL
         ENTERED=20030608
        KEYWORDS="theme xfce"
           SHORT="gtk+2 theme engine desinged for Xfce"
cat << EOF
gtk-xfce-engine is a gtk+2 theme engine designed for Xfce4, but can be used
without Xfce.
EOF
