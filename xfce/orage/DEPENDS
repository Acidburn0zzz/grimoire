depends libxfcegui4 &&
depends xfce4-panel &&

optional_depends db \
                 "--with-bdb4" \
                 "--without-bdb4" \
                 "for Berkeley DB support" &&

optional_depends dbus-glib \
                 "--enable-dbus" \
                 "--disable-dbus" \
                 "for D-BUS support" &&

optional_depends libnotify \
                 "--enable-libnotify" \
                 "--disable-libnotify" \
                 "for LIBNOTIFY support"
