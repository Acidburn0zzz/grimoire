                 "--enable-exo" \
                 "--disable-exo" \
                 "for nifty icon effects" &&

optional_depends gnome-doc-utils \
                 "--enable-xml2po" \
                 "--disable-xml2po" \
                 "use xml2po to translate documentation" &&

optional_depends dbus "" "" "for D-Bus usage"
