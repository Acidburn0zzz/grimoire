          SOURCE=$SPELL-$VERSION.tar.bz2
   SOURCE_URL[0]=http://www.gnokii.org/download/$SPELL/$SOURCE
     SOURCE_HASH=sha512:deadfa15eaf2b478e6c2f03b7c9a22d9972ad82c593ec274460cb9363f57ea8743ffe30975519c1b0a76b94be4a1bff29e528ff3487853a61f4a9602630878e6
