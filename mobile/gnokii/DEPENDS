optional_depends  xorg-libs                     \
                  '--with-x'                    \
                  '--without-x'                 \
                  'to use the X window system'  &&
optional_depends  libical                       \
                  '--enable-libical'            \
                  '--disable-libical'           \
                  'For iCal support'            &&
optional_depends  libusb                        \
                  '--enable-libusb'             \
                  '--disable-libusb'            \
                  'For libusb support'          &&
optional_depends  BLUEZ                         \
                  '--enable-bluetooth'          \
                  '--disable-bluetooth'         \
                  'For bluetooth support'       &&

if is_depends_enabled $SPELL xorg-libs; then
  depends gtk+2
fi
