depends  g++        &&
depends  freetype2  &&
depends  autoconf   &&
depends  libxml2    &&
depends  expat      &&

optional_depends  ncurses                             \
                  ""                                  \
                  "--disable-curses --disable-panel"  \
                  "for ncurses UI"                    &&

depends  imagemagick                                  &&
optional_depends  gmp                                          &&
optional_depends wireshark                             \
                 "--with-wireshark"               \
                 "--without-wireshark"                 \
                  "support wireshark wiretap for replaying logs" &&

if echo $OPT | grep 'enable-syspcap' > /dev/null 2>&1
then
depends libpcap
fi
