config_query_option PL_OPTS                       \
                    "Enable threads?"             \
                    n                             \
                    "--enable-threads"            \
                    "--disable-threads"           &&
config_query_option PL_OPTS                       \
                    "Enable debug support?"       \
                    n                             \
                    "--enable-debug"              \
                    "--disable-debug"             &&
config_query_option PL_OPTS                       \
                    "Enable userland conduits?"   \
                    n                             \
                    "--enable-conduits"           \
                    "--disable-conduits"
