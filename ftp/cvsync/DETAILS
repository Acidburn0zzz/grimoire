           SPELL=cvsync
         VERSION=0.24.19
          SOURCE="$SPELL-$VERSION.tar.gz"
     SOURCE_HASH=sha512:b16524d47142dcbed8ddc7b6e03d14f231e5104206e0c3a2838b18de34c420c6f9e6de26a37bcc66a9f7728d2cf23dc0eb1f346e4cc44240c6458446184413e1
