depends curl &&
depends gtk+2 &&
depends hicolor-icon-theme &&

optional_depends libnotify \
                 "--enable-notify" \
                 "--disable-notify" \
                 "for libnotify support" &&

optional_depends gstreamer \
                 "--enable-gstreamer" \
                 "--disable-gstreamer" \
                 "for GStreamer audio support" &&

optional_depends gettext \
                 "--enable-nls" \
                 "--disable-nls" \
                 "to use Native Language Support"
