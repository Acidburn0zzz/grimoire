depends pygtk2 &&
depends dbus-python &&
depends librsvg2 &&
depends openssl &&
depends pyxdg &&
depends zlib &&
depends boost &&
depends setuptools &&

local boost_ver=$(installed_version boost) &&
if [[ "$(echo $boost_ver | sed -e 's:_::g')" -lt 1341 ]]; then
  message "deluge needs newer boost" &&
  force_depends boost 
fi &&

sub_depends boost THREAD &&
sub_depends boost FILESYSTEM &&
sub_depends boost DATE_TIME
