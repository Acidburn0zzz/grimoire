depends pygtk2                  &&
depends dbus-python             &&
depends librsvg2                &&
local boost_ver=$(installed_version boost) &&
if [[ $boost_ver != 1_34_1 ]]; then
  message "deluge needs newer boost!" &&
  force_depends boost 
else 
  depends boost
fi&&
sub_depends boost THREAD        &&
sub_depends boost FILESYSTEM    &&
sub_depends boost DATE_TIME     &&
depends openssl                 &&
depends pyxdg                   &&
depends zlib
